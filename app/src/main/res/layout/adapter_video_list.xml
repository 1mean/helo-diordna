<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:clickable="true"
        android:focusable="true"
        tools:viewBindingIgnore="true"
        android:background="@drawable/ripple_landscape_item">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_video_list_cover"
            android:layout_width="142dp"
            android:layout_height="89dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/img_video_list_cover"
            app:layout_constraintRight_toRightOf="@id/img_video_list_cover"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="6dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:background="@drawable/shape_video_item_duration"
            tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_title"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_video_list_cover"
            app:layout_constraintLeft_toRightOf="@id/img_video_list_cover"
            android:layout_marginStart="11dp"
            android:textColor="@color/color_video_item_title"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_video_list_author"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_video_list_title"
            app:layout_constraintBottom_toBottomOf="@id/img_video_list_cover"
            android:layout_marginBottom="18dp"
            android:src="@mipmap/img_up1" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_author"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/img_video_list_author"
            app:layout_constraintBottom_toBottomOf="@id/img_video_list_author"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_video_list_video"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/img_video_list_author"
            app:layout_constraintBottom_toBottomOf="@id/img_video_list_cover"
            android:src="@mipmap/img_video_play_times" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_video"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/img_video_list_video"
            app:layout_constraintBottom_toBottomOf="@id/img_video_list_video"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/txt_video_list_video"
            app:layout_constraintBottom_toBottomOf="@id/txt_video_list_video"
            android:layout_marginStart="8dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>