<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:clickable="true"
        android:focusable="true"
        tools:viewBindingIgnore="true"
        android:background="@drawable/ripple_landscape_item">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_video_list_cover"
            android:layout_width="167dp"
            android:layout_height="94dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitXY"
            android:layout_marginStart="12dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_duration"
            android:layout_width="32dp"
            android:layout_height="14dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/img_video_list_cover"
            app:layout_constraintRight_toRightOf="@id/img_video_list_cover"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:background="@drawable/shape_video_item_duration"
            tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_video_list_cover"
            app:layout_constraintLeft_toRightOf="@id/img_video_list_cover"
            android:layout_marginStart="11dp"
            android:textColor="@color/color_video_item_title"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:maxEms="9" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_video_list_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/txt_video_list_title"
            app:layout_constraintBottom_toBottomOf="@id/img_video_list_cover"
            android:src="@mipmap/img_video_author" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/img_video_list_author"
            app:layout_constraintBottom_toBottomOf="@id/img_video_list_cover"
            android:layout_marginStart="5dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:textSize="11sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_video_list_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@id/img_video_list_cover"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_music_more"
                app:layout_constraintLeft_toLeftOf="@id/item_video_list_more"
                app:layout_constraintRight_toRightOf="@id/item_video_list_more"
                app:layout_constraintBottom_toBottomOf="@id/item_video_list_more"
                android:layout_marginBottom="3dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:background="@color/color_search_list_divider" />
</androidx.constraintlayout.widget.ConstraintLayout>