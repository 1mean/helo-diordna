<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:clickable="true"
        android:focusable="true"
        tools:viewBindingIgnore="true"
        android:background="@drawable/ripple_landscape_item">

    <androidx.cardview.widget.CardView
            android:id="@+id/flayout_ranking_cover"
            android:layout_width="150dp"
            android:layout_height="93dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_ranking_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_ranking_duration"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="6dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@drawable/shape_video_item_duration"
                tools:ignore="SmallSp" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_ranking"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_ranking_1">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_ranking"
                    app:layout_constraintRight_toRightOf="@id/clayout_ranking"
                    app:layout_constraintTop_toTopOf="@id/clayout_ranking"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_ranking"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/pglh"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_ranking_title"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/flayout_ranking_cover"
            app:layout_constraintLeft_toRightOf="@id/flayout_ranking_cover"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_video_item_title"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_ranking_author"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_ranking_title"
            app:layout_constraintBottom_toBottomOf="@id/flayout_ranking_cover"
            android:layout_marginBottom="18dp"
            android:src="@mipmap/img_up1" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_ranking_author"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/img_ranking_author"
            app:layout_constraintBottom_toBottomOf="@id/img_ranking_author"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_ranking_video"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/img_ranking_author"
            app:layout_constraintBottom_toBottomOf="@id/flayout_ranking_cover"
            android:src="@mipmap/img_video_play_times" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_ranking_video"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/img_ranking_video"
            app:layout_constraintBottom_toBottomOf="@id/img_ranking_video"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_ranking_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/txt_ranking_video"
            app:layout_constraintBottom_toBottomOf="@id/txt_ranking_video"
            android:layout_marginStart="8dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>