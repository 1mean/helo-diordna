<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:clickable="true"
        android:focusable="true"
        tools:viewBindingIgnore="true"
        android:background="@drawable/ripple_video_item_like">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_search_num"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_horizontal"
            android:layout_marginStart="12dp"
            android:includeFontPadding="false"
            android:textSize="13sp"
            android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/txt_search_num"
            app:layout_constraintBottom_toBottomOf="@id/txt_search_num"
            app:layout_constraintLeft_toRightOf="@id/txt_search_num"
            android:maxLines="1"
            android:maxEms="8"
            android:ellipsize="end"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/color_txt_item_title_recommend" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_hot"
            android:layout_width="13dp"
            android:layout_height="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_search_title"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:visibility="gone"
            tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>