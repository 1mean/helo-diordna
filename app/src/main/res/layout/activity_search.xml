<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_home"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clayout_search_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_search"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/shape_home_search"
            android:drawableStart="@mipmap/img_home_top_search"
            android:drawablePadding="12dp"
            android:hint="大熊猫和花"
            android:imeOptions="actionSearch"
            android:paddingStart="9dp"
            android:singleLine="true"
            android:textColor="@color/color_txt_item_title_recommend"
            android:textColorHint="@color/color_txt_edit_hint_search"
            android:textCursorDrawable="@drawable/shape_search_edit"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/clayout_search_title"
            app:layout_constraintLeft_toRightOf="@id/ibtn_search_leave"
            app:layout_constraintTop_toTopOf="@id/clayout_search_title"
            app:layout_constraintWidth_percent="0.68"
            tools:ignore="RtlSymmetry" />

        <!--android:imeOptions="actionSearch"，这个属性的值为：actionSearch: 搜索、actionSend：发送-->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibtn_search_leave"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/img_setting_top_back_black33"
            app:layout_constraintLeft_toLeftOf="@id/clayout_search_title" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_search_clear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:background="@null"
            android:src="@mipmap/img_search_clear"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/edit_search"
            app:layout_constraintRight_toRightOf="@id/edit_search"
            app:layout_constraintTop_toTopOf="@id/edit_search" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_search"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="17dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/str_search"
            android:textColor="@color/color_text_search"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="@id/clayout_search_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/llayout_search_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/clayout_search_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_search_hot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.8">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_hot_search"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center_vertical"
                    android:paddingStart="12dp"
                    android:text="搜索热词"
                    android:textColor="@color/color_txt_item_title_recommend"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/clayout_search_hot" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@id/txt_hot_search" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_search_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7.2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_search_history"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/str_history_search"
                    android:textColor="@color/color_txt_item_title_recommend"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_search_history"
                    app:layout_constraintTop_toTopOf="@id/clayout_search_history" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ibtn_search_clear"
                    android:layout_width="42dp"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:src="@mipmap/img_clear"
                    app:layout_constraintBottom_toBottomOf="@id/txt_search_history"
                    app:layout_constraintRight_toRightOf="@id/clayout_search_history"
                    app:layout_constraintTop_toTopOf="@id/txt_search_history" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_history"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.82"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@id/txt_search_history" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>
</androidx.appcompat.widget.LinearLayoutCompat>