<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_style_setting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="首页推荐设置" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_setting_style1"
            android:layout_width="114dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_style_setting"
            app:layout_constraintTop_toBottomOf="@id/txt_style_setting_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_style1"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="@id/clayout_setting_style1">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="105dp"
                    android:layout_height="130dp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_style1"
                    app:layout_constraintRight_toRightOf="@id/clayout_style1"
                    app:layout_constraintTop_toTopOf="@id/clayout_style1"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_style1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_reco_style1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_style_title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/clayout_style1"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@id/clayout_setting_style1"
                app:layout_constraintRight_toRightOf="@id/clayout_setting_style1">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_style1_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_style_selected"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_style_title"
                    app:layout_constraintTop_toTopOf="@id/clayout_style_title"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_style_title" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/color_txt_item_title_recommend"
                    android:text="经典样式"
                    app:layout_constraintLeft_toRightOf="@id/img_style1_selected"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toTopOf="@id/clayout_style_title"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_style_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_setting_style2"
            android:layout_width="114dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_style_setting"
            app:layout_constraintTop_toBottomOf="@id/txt_style_setting_name"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_style2"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="@id/clayout_setting_style2">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="105dp"
                    android:layout_height="130dp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_style2"
                    app:layout_constraintRight_toRightOf="@id/clayout_style2"
                    app:layout_constraintTop_toTopOf="@id/clayout_style2"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_style2"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_reco_style2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_style2_title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/clayout_style2"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@id/clayout_setting_style2"
                app:layout_constraintRight_toRightOf="@id/clayout_setting_style2">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_style2_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_style_selected"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_style2_title"
                    app:layout_constraintTop_toTopOf="@id/clayout_style2_title"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_style2_title" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/color_txt_item_title_recommend"
                    android:text="满铺样式"
                    app:layout_constraintLeft_toRightOf="@id/img_style2_selected"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toTopOf="@id/clayout_style2_title"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_style2_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_style_sure"
            android:layout_width="245dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@id/clayout_setting_style1"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_bg_style_sure"
            android:text="@string/str_sure"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center" />
</androidx.constraintlayout.widget.ConstraintLayout>