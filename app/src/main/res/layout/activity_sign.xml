<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home"
        android:clickable="true">
    <!--bug:防止能点击到底下activity的控件-->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_rename_top"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_setting_back"
                style="@style/style_img_top_collect"
                app:layout_constraintLeft_toLeftOf="@id/clayout_rename_top"
                app:layout_constraintTop_toTopOf="@id/clayout_rename_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_rename_top" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_setting_title"
                style="@style/style_txt_top_collect"
                app:layout_constraintTop_toTopOf="@id/clayout_rename_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_rename_top"
                app:layout_constraintLeft_toRightOf="@id/ibn_setting_back"
                android:text="个性签名" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sign_sure"
                android:layout_width="56dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/clayout_rename_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_rename_top"
                app:layout_constraintRight_toRightOf="@id/clayout_rename_top"
                android:textColor="@color/color_txt_mylove_self"
                android:textSize="14sp"
                android:background="@null"
                android:gravity="center"
                android:text="保存" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_sign_name"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@color/color_bg_activity_setting"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clayout_rename_top"
            android:hint="彰显你的个性，让周围的人更了解你"
            android:textColorHint="@color/color_edit_hint_resign"
            android:textColor="@color/color_txt_title_item_panda"
            android:textCursorDrawable="@drawable/shape_edit_comment"
            android:textSize="15sp"
            android:ellipsize="start"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:paddingEnd="15dp"
            android:gravity="top" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_sign_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/edit_sign_name"
            app:layout_constraintTop_toBottomOf="@id/edit_sign_name"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:maxLines="4"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_video_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
