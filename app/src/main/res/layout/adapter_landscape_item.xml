<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_landscape_item">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_landscape"
            android:layout_width="128dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitXY"
            android:layout_marginStart="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_landscape_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/img_landscape"
            app:layout_constraintRight_toRightOf="@id/img_landscape"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/shape_video_item_duration"
            tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_landscape_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_landscape"
            app:layout_constraintLeft_toRightOf="@id/img_landscape"
            android:layout_marginStart="11dp"
            android:textColor="@color/color_video_item_title"
            android:textSize="14sp"
            android:maxLines="2"
            android:maxEms="12" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_video_author"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_landscape_name"
            app:layout_constraintBottom_toBottomOf="@id/img_landscape"
            android:layout_marginBottom="17dp"
            android:src="@mipmap/img_up1" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_landscape_author"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/image_video_author"
            app:layout_constraintBottom_toBottomOf="@id/image_video_author"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="11sp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_video_play_counts"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_landscape_name"
            app:layout_constraintBottom_toBottomOf="@id/img_landscape"
            android:src="@mipmap/img_video_play_times" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_play_counts"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/image_video_play_counts"
            app:layout_constraintBottom_toBottomOf="@id/image_video_play_counts"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="11sp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_video_play_comment"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_landscape_name"
            app:layout_constraintBottom_toBottomOf="@id/txt_video_play_counts"
            android:layout_marginStart="90dp"
            android:src="@mipmap/img_video_comment" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_play_comment"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/image_video_play_comment"
            app:layout_constraintBottom_toBottomOf="@id/image_video_play_comment"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="11sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_landscape_more"
            android:layout_width="40dp"
            android:layout_height="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_video_more2"
                app:layout_constraintLeft_toLeftOf="@id/item_landscape_more"
                app:layout_constraintRight_toRightOf="@id/item_landscape_more"
                app:layout_constraintTop_toTopOf="@id/item_landscape_more"
                app:layout_constraintBottom_toBottomOf="@id/item_landscape_more" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>