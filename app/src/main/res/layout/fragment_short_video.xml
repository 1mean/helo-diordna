<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home">

    <View
            android:layout_width="match_parent"
            android:layout_height="32.66dp"
            android:visibility="gone"
            android:background="@color/color_white_lucency" />

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2_short"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_short_tab"
            android:layout_width="match_parent"
            android:layout_marginTop="32.66dp"
            android:layout_height="44dp">

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tb_short"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_short_tab"
                app:layout_constraintRight_toRightOf="@id/clayout_short_tab"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="5dp"
                app:tabMinWidth="70dp"
                android:background="@color/color_white_lucency"
                app:tabRippleColor="@android:color/transparent"
                app:tabTextColor="@color/color_txt_short_tab_unselected"
                app:tabIndicatorColor="@color/color_txt_short_tab_selected"
                app:tabSelectedTextColor="@color/color_txt_short_tab_selected"
                app:tabTextAppearance="@style/ShortTabLayoutTextStyle"
                app:tabIndicator="@drawable/layer_short_indicator" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_short_search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="32.66dp"
            android:layout_gravity="right"
            android:visibility="gone"
            tools:ignore="RtlHardcoded">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_short_search"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toTopOf="@id/clayout_short_search"
                app:layout_constraintLeft_toLeftOf="@id/clayout_short_search"
                app:layout_constraintRight_toRightOf="@id/clayout_short_search" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>