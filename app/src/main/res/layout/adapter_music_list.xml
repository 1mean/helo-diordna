<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_add"
            android:layout_width="45dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_music_add"
                app:layout_constraintLeft_toLeftOf="@id/layout_add"
                app:layout_constraintTop_toTopOf="@id/layout_add"
                app:layout_constraintBottom_toBottomOf="@id/layout_add"
                app:layout_constraintRight_toRightOf="@id/layout_add" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_cover_music"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@id/layout_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_audio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/img_cover_music"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginStart="10dp"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/txt_audio_name"
            app:layout_constraintTop_toBottomOf="@id/txt_audio_name"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:textColor="@color/color_txt_singer"
            tools:ignore="SmallSp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_more"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/layout_more"
                app:layout_constraintBottom_toBottomOf="@id/layout_more"
                app:layout_constraintLeft_toLeftOf="@id/layout_more"
                app:layout_constraintRight_toRightOf="@id/layout_more"
                android:src="@mipmap/img_music_more" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>