<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2_video_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_vertical_top"
                android:layout_width="match_parent"
                android:layout_height="44dp">

            <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ibn_vertical_top_close"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_vertical_top"
                    android:background="@null"
                    android:src="@mipmap/img_vertical_back" />

            <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ibn_vertical_top_more"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    app:layout_constraintRight_toRightOf="@id/clayout_vertical_top"
                    android:background="@null"
                    android:src="@mipmap/img_vertical_top_more" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_vertical_header"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉刷新内容"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintTop_toTopOf="@id/clayout_vertical_header"
                app:layout_constraintBottom_toBottomOf="@id/clayout_vertical_header"
                app:layout_constraintLeft_toLeftOf="@id/clayout_vertical_header"
                app:layout_constraintRight_toRightOf="@id/clayout_vertical_header" />

        <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="53dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="@id/clayout_vertical_header"
                android:background="@null"
                android:src="@mipmap/img_vertical_top_video" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>