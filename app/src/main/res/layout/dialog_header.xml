<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_header_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/clayout_header_close"
                app:layout_constraintRight_toRightOf="@id/clayout_header_close"
                app:layout_constraintTop_toTopOf="@id/clayout_header_close"
                app:layout_constraintBottom_toBottomOf="@id/clayout_header_close"
                android:src="@mipmap/img_header_close" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_dialog_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="100dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_header_download"
            style="@style/style_dialog_item_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="100dp">

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/style_dialog_item_text"
                android:text="保存图片"
                app:layout_constraintLeft_toLeftOf="@id/clayout_header_download"
                app:layout_constraintRight_toRightOf="@id/clayout_header_download"
                app:layout_constraintTop_toTopOf="@id/clayout_header_download"
                app:layout_constraintBottom_toBottomOf="@id/clayout_header_download" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_header_capture"
            style="@style/style_dialog_item_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/clayout_header_download"
            android:layout_marginBottom="16dp">

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/style_dialog_item_text"
                android:text="更换头像-拍照"
                app:layout_constraintLeft_toLeftOf="@id/clayout_header_capture"
                app:layout_constraintRight_toRightOf="@id/clayout_header_capture"
                app:layout_constraintTop_toTopOf="@id/clayout_header_capture"
                app:layout_constraintBottom_toBottomOf="@id/clayout_header_capture" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_header_picture"
            style="@style/style_dialog_item_layout"
            app:layout_constraintBottom_toTopOf="@id/clayout_header_capture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="16dp">

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/style_dialog_item_text"
                android:text="更换头像-从相册选取"
                app:layout_constraintLeft_toLeftOf="@id/clayout_header_picture"
                app:layout_constraintRight_toRightOf="@id/clayout_header_picture"
                app:layout_constraintTop_toTopOf="@id/clayout_header_picture"
                app:layout_constraintBottom_toBottomOf="@id/clayout_header_picture" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>