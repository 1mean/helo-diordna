<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:clickable="true"
        android:focusable="true"
        tools:viewBindingIgnore="true"
        android:background="@drawable/ripple_landscape_item">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_user_list_cover"
            android:layout_width="128dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitXY"
            android:layout_marginStart="12dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_user_list_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/img_user_list_cover"
            app:layout_constraintRight_toRightOf="@id/img_user_list_cover"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/shape_video_item_duration"
            tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_user_list_name"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_user_list_cover"
            app:layout_constraintLeft_toRightOf="@id/img_user_list_cover"
            android:layout_marginStart="11dp"
            android:textColor="@color/color_video_item_title"
            android:textSize="14sp"
            android:maxLines="2"
            android:maxEms="12" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_user_list_time"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_user_list_name"
            app:layout_constraintTop_toBottomOf="@id/txt_user_list_name"
            android:textColor="@color/color_txt_video_time"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="11sp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_user_video_play_counts"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_user_list_time"
            app:layout_constraintBottom_toBottomOf="@id/img_user_list_cover"
            android:src="@mipmap/img_video_play_times" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_user_video_playcounts"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/image_user_video_play_counts"
            app:layout_constraintBottom_toBottomOf="@id/image_user_video_play_counts"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_txt_video_time"
            android:gravity="center"
            android:text="23观看"
            android:includeFontPadding="false"
            android:textSize="11sp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_user_video_play_comment"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:layout_constraintLeft_toRightOf="@id/txt_user_video_playcounts"
            app:layout_constraintBottom_toBottomOf="@id/txt_user_video_playcounts"
            android:layout_marginStart="10dp"
            android:src="@mipmap/img_video_comment" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_user_video_play_comment"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:layout_constraintLeft_toRightOf="@id/image_user_video_play_comment"
            app:layout_constraintBottom_toBottomOf="@id/image_user_video_play_comment"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_txt_video_time"
            android:gravity="center"
            android:text=" -- "
            android:includeFontPadding="false"
            android:textSize="11sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_user_video_more"
            android:layout_width="40dp"
            android:layout_height="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_video_more2"
                app:layout_constraintLeft_toLeftOf="@id/item_user_video_more"
                app:layout_constraintRight_toRightOf="@id/item_user_video_more"
                app:layout_constraintTop_toTopOf="@id/item_user_video_more"
                app:layout_constraintBottom_toBottomOf="@id/item_user_video_more" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/color_bg_hot_divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>