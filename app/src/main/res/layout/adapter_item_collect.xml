<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item_collect"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0.5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_item_collect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_txt_mine_name"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/card_item_collect"
        app:layout_constraintTop_toTopOf="@id/card_item_collect" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_desc_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="@color/color_video_item_name"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/card_item_collect"
        app:layout_constraintLeft_toLeftOf="@id/txt_title_collect" />

</androidx.constraintlayout.widget.ConstraintLayout>