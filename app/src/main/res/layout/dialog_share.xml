<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_video_share"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/str_share"
            android:gravity="bottom"
            android:paddingStart="22dp"
            android:textSize="12sp"
            android:textColor="@color/color_txt_video_share"
            tools:ignore="RtlSymmetry" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_share_top"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="12dp" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_bg_video_divider" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_share_bottom"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="16dp" />

    <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_bg_video_divider" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_share_close"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/str_cancel"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/color_txt_video_cancel" />
</androidx.appcompat.widget.LinearLayoutCompat>