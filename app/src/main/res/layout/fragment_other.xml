<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="32.66dp"
            android:background="@color/color_white_lucency" />

    <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tab_eye"
            android:layout_width="104dp"
            android:layout_height="50dp"
            tl:tl_iconVisible="false"
            tl:tl_textSelectColor="@color/color_bg_eye_tab_indicator"
            tl:tl_textUnselectColor="@color/color_text_eye_unselect"
            tl:tl_indicator_color="@color/color_bg_eye_tab_indicator"
            tl:tl_textBold="SELECT"
            android:layout_gravity="center_horizontal"
            tl:tl_indicator_width="13dp"
            tl:tl_indicator_height="3dp"
            tl:tl_indicator_corner_radius="5dp"
            tl:tl_indicator_margin_bottom="5dp"
            tl:tl_textsize="16dp" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eye_bg_top_divider" />

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2_eye"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</androidx.appcompat.widget.LinearLayoutCompat>