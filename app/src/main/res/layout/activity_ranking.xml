<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_bg_home">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/bar_title_rank"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:navigationIcon="@mipmap/img_top_leave">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_title_name_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_bar_txt_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="播放榜"
                android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="@color/color_bg_divider_self" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swip_layout_rank"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <com.example.pandas.ui.view.recyclerview.SwipRecyclerView
                    android:id="@+id/recycler_layout_rank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

            <include
                    android:id="@+id/layout_error"
                    layout="@layout/layout_error" />

            <include
                    android:id="@+id/layout_empty"
                    layout="@layout/layout_empty" />
        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.appcompat.widget.LinearLayoutCompat>