<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:clickable="true"
        android:background="@drawable/ripple_landscape_item"
        android:focusable="true">

    <View
            android:layout_width="100dp"
            android:layout_height="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginStart="26dp"
            android:background="@drawable/shape_file_top1" />

    <View
            android:layout_width="112dp"
            android:layout_height="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="6dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/shape_file_top2" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_collect_cover"
            android:layout_width="128dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:layout_constraintRight_toRightOf="@id/img_collect_cover"
            app:layout_constraintBottom_toBottomOf="@id/img_collect_cover"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/shape_dark_duration"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@mipmap/img_collect_file" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_collect_content_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="5dp"
                android:textSize="11sp"
                android:text="6" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_collect_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_collect_cover"
            app:layout_constraintLeft_toRightOf="@id/img_collect_cover"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_video_name_txt"
            android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_collect_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/img_collect_cover"
            app:layout_constraintLeft_toLeftOf="@id/txt_collect_name"
            android:textColor="@color/color_collect_creator"
            android:layout_marginBottom="16dp"
            android:textSize="11sp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_collect_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/img_collect_cover"
            app:layout_constraintLeft_toLeftOf="@id/txt_collect_name"
            android:textColor="@color/color_collect_creator"
            android:textSize="11sp"
            android:text="收藏夹 - 公开" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_collect_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_more_later"
                app:layout_constraintLeft_toLeftOf="@id/clayout_collect_more"
                app:layout_constraintRight_toRightOf="@id/clayout_collect_more"
                app:layout_constraintBottom_toBottomOf="@id/clayout_collect_more"
                android:layout_marginBottom="10dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>