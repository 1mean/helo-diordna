<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        tools:viewBindingIgnore="true"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:id="@+id/flayout_top"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0.5dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_pandas_item_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_panda_item_shelter"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_video_shelter"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_panda_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/clayout_panda_item_shelter"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_panda_item_shelter"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_panda_item_shelter"
                    android:layout_marginStart="6dp" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_panda_item_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/clayout_panda_item_shelter"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_panda_item_shelter"
                    app:layout_constraintRight_toRightOf="@id/clayout_panda_item_shelter"
                    android:layout_marginEnd="6dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_pandas_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            android:textColor="@color/grey900"
            android:maxLines="1"
            android:maxEms="12"
            android:ellipsize="end" />
</androidx.appcompat.widget.LinearLayoutCompat>