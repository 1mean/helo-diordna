<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        tools:viewBindingIgnore="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="0.5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_item_panda"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_pandas_item_cover"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                app:layout_constraintTop_toTopOf="@id/clayout_item_panda"
                android:scaleType="fitXY" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_panda_item_duration"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/img_pandas_item_cover"
                app:layout_constraintRight_toRightOf="@id/img_pandas_item_cover"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="6dp"
                android:background="@drawable/shape_hot_duration"
                tools:ignore="SmallSp"  />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pandas_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_pandas_item_cover"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:textColor="@color/grey900"
                android:layout_marginStart="7dp"
                android:maxLines="1"
                android:maxEms="10"
                android:ellipsize="end" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>