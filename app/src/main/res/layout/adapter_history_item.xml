<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_landscape_item">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_history_cover"
            android:layout_width="128dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitXY"
            android:layout_marginStart="12dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_history_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/img_history_cover"
            app:layout_constraintRight_toRightOf="@id/img_history_cover"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:background="@drawable/shape_history_item_duration"
            tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_history_name"
            android:layout_width="194dp"
            android:layout_height="37dp"
            app:layout_constraintTop_toTopOf="@id/img_history_cover"
            app:layout_constraintLeft_toRightOf="@id/img_history_cover"
            android:layout_marginStart="11dp"
            android:textColor="@color/color_video_item_title"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_history_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/txt_history_name"
            app:layout_constraintBottom_toBottomOf="@id/img_history_cover"
            android:src="@mipmap/img_history_time" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/img_history_video_time"
            app:layout_constraintBottom_toBottomOf="@id/img_history_video_time"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_txt_history_time"
            android:gravity="center"
            android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>