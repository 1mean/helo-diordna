<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:background="@drawable/ripple_landscape_item">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ibn_history_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/img_history_unselect"
            android:visibility="visible" />

    <androidx.cardview.widget.CardView
            android:id="@+id/clayout_history_item_cover"
            android:layout_width="134dp"
            android:layout_height="80dp"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="1.0dp"
            android:layout_gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_history_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:background="@drawable/shape_history_item_duration"
                tools:ignore="SmallSp" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_history_item_content"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_name"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                app:layout_constraintTop_toTopOf="@id/clayout_history_item_content"
                app:layout_constraintLeft_toLeftOf="@id/clayout_history_item_content"
                android:textColor="@color/color_txt_title_item_panda"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_history_up"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:src="@mipmap/img_up1"
                app:layout_constraintBottom_toBottomOf="@id/clayout_history_item_content"
                app:layout_constraintLeft_toLeftOf="@id/clayout_history_item_content"
                android:layout_marginBottom="17dp" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_up"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                app:layout_constraintLeft_toRightOf="@id/img_history_up"
                app:layout_constraintBottom_toBottomOf="@id/img_history_up"
                android:layout_marginStart="3dp"
                android:textColor="@color/color_txt_history_time"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_history_video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/clayout_history_item_content"
                app:layout_constraintLeft_toLeftOf="@id/clayout_history_item_content"
                android:src="@mipmap/img_history_time" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/img_history_video_time"
                app:layout_constraintBottom_toBottomOf="@id/img_history_video_time"
                android:layout_marginStart="3dp"
                android:textColor="@color/color_txt_history_time"
                android:gravity="center"
                android:textSize="12sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>