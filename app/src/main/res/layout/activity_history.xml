<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbar_history"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:navigationIcon="@mipmap/img_toolbar_back"
            app:title="@string/str_history"
            app:titleTextAppearance="@style/styles_cache_toolbar" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/color_music_start_bg"
            android:outlineSpotShadowColor="@color/color_music_divider_shadow"
            android:outlineAmbientShadowColor="@color/color_music_divider_shadow"
            android:elevation="3dp" />

    <com.example.pandas.ui.view.refresh.LoadMoreRecyclerView2
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</androidx.appcompat.widget.LinearLayoutCompat>