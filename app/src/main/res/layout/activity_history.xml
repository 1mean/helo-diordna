<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_history_top"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_history_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_history_top"
                android:background="@null"
                android:src="@mipmap/img_back_1" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ibn_history_back"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/clayout_history_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_history_top"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="@color/color_history_title" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_manager"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@id/clayout_history_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_history_top"
                app:layout_constraintRight_toRightOf="@id/clayout_history_top"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/color_history_manager"
                android:text="@string/str_manager" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/color_music_start_bg"
            android:outlineSpotShadowColor="@color/color_music_divider_shadow"
            android:outlineAmbientShadowColor="@color/color_music_divider_shadow"
            android:elevation="3dp" />

    <com.example.pandas.ui.view.recyclerview.LoadMoreRecyclerView2
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</androidx.appcompat.widget.LinearLayoutCompat>