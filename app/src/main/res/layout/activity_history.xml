<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_history_top"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_history_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_history_top"
                android:background="@null"
                android:src="@mipmap/img_top_leave" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ibn_history_back"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/clayout_history_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_history_top"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:text="@string/str_history"
                android:textColor="@color/color_history_title" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_manager"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@id/clayout_history_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_history_top"
                app:layout_constraintRight_toRightOf="@id/clayout_history_top"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/color_history_manager"
                android:text="@string/str_manager" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:background="@color/color_bg_divider_home" />

    <com.example.pandas.ui.view.recyclerview.SwipRecyclerView
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_history_bottom"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:visibility="gone">

        <View
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:background="@color/color_bg_divider"
                app:layout_constraintTop_toTopOf="@id/clayout_history_bottom" />

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/clayout_select_all"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintLeft_toLeftOf="@id/clayout_history_bottom"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@id/clayout_history_bottom"
                app:layout_constraintBottom_toBottomOf="@id/clayout_history_bottom">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_select_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_history_unselect"
                    android:layout_gravity="center_vertical" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_select_all"
                    android:textSize="15sp"
                    android:textColor="@color/color_mine_txt_download"
                    android:layout_marginStart="13dp"
                    android:layout_gravity="center_vertical" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_history_bottom"
                app:layout_constraintBottom_toBottomOf="@id/clayout_history_bottom"
                app:layout_constraintRight_toRightOf="@id/clayout_history_bottom"
                android:layout_marginEnd="24dp"
                android:text="@string/str_delete"
                android:textSize="15sp"
                android:textColor="@color/color_name_vip" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>