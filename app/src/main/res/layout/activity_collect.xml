<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_collect_top"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_collect_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_collect_top"
                android:background="@null"
                android:src="@mipmap/img_top_leave" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_collect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ibn_collect_back"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/clayout_collect_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_collect_top"
                android:includeFontPadding="false"
                android:text="@string/str_mine_collect"
                android:textSize="16sp"
                android:textColor="@color/color_history_title" />

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_collect_add"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:layout_constraintTop_toTopOf="@id/clayout_collect_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_collect_top"
                app:layout_constraintRight_toRightOf="@id/clayout_collect_top"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:src="@mipmap/img_topview_add_black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:background="@color/color_bg_item_divider" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_collect"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_collect"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.appcompat.widget.LinearLayoutCompat>