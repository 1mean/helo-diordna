<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:clickable="true"
        android:focusable="true"
        tools:viewBindingIgnore="true"
        android:background="@drawable/ripple_landscape_item">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_hot_cover"
            android:layout_width="167dp"
            android:layout_height="94dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_hot_duration"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/img_hot_cover"
            app:layout_constraintRight_toRightOf="@id/img_hot_cover"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/shape_hot_duration"
            tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_hot_title"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_hot_cover"
            app:layout_constraintLeft_toRightOf="@id/img_hot_cover"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_txt_item_title_hot"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_hot_tag"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_hot_title"
            app:layout_constraintBottom_toBottomOf="@id/img_hot_cover"
            android:layout_marginBottom="38dp"
            android:includeFontPadding="false"
            android:background="@drawable/shape_hot_tag"
            android:textColor="@color/color_txt_hot_tag"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="10sp"
            android:gravity="center"
            android:visibility="gone"
            tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_hot_author"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_hot_title"
            app:layout_constraintBottom_toBottomOf="@id/img_hot_cover"
            android:layout_marginBottom="18dp"
            android:src="@mipmap/img_up1" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_hot_author"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/image_hot_author"
            app:layout_constraintBottom_toBottomOf="@id/image_hot_author"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_hot_video"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_hot_title"
            app:layout_constraintBottom_toBottomOf="@id/img_hot_cover"
            android:src="@mipmap/img_video_play_times" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_hot_video_counts"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/image_hot_video"
            app:layout_constraintBottom_toBottomOf="@id/image_hot_video"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_hot_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/txt_hot_video_counts"
            app:layout_constraintBottom_toBottomOf="@id/txt_hot_video_counts"
            android:layout_marginStart="8dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_hot_more"
            android:layout_width="35dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="@id/img_hot_cover"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_video_more2"
                app:layout_constraintLeft_toLeftOf="@id/item_hot_more"
                app:layout_constraintRight_toRightOf="@id/item_hot_more"
                app:layout_constraintBottom_toBottomOf="@id/item_hot_more" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:background="@color/color_bg_item_divider" />
</androidx.constraintlayout.widget.ConstraintLayout>