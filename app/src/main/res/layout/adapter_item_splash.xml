<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="210dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0.8dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_item_splash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_bg_bottom"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_bg_bottom_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_bg_bottom"
                app:layout_constraintBottom_toBottomOf="@id/clayout_bg_bottom"
                app:layout_constraintLeft_toLeftOf="@id/clayout_bg_bottom"
                app:layout_constraintRight_toRightOf="@id/clayout_bg_bottom">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_bg_seleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/clayout_bg_bottom_group"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_bg_bottom_group"
                    app:layout_constraintRight_toRightOf="@id/clayout_bg_bottom_group"
                    android:textColor="@color/color_txt_fans_self" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_bg_selected"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/img_history_selected"
                    app:layout_constraintTop_toTopOf="@id/clayout_bg_bottom_group"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_bg_bottom_group"
                    app:layout_constraintRight_toLeftOf="@id/txt_bg_seleted"
                    android:layout_marginEnd="5dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>