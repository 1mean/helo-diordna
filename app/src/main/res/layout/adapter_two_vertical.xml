<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="118dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="94dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="0.5dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_pandas_item_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_panda_item_shelter"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_cm_video_shelter">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_video_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_panda_item_shelter"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_panda_item_shelter"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="7dp"
                    android:textColor="#e6ffffff"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:maxEms="12"
                    android:ellipsize="end"
                    android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_panda_item_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#e6ffffff"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_panda_item_shelter"
                    app:layout_constraintRight_toRightOf="@id/clayout_panda_item_shelter"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:includeFontPadding="false" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_pandas_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/color_txt_fans_self"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end" />
</androidx.constraintlayout.widget.ConstraintLayout>