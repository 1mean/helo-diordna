<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_publish_top"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_publish_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_publish_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_publish_top"
                app:layout_constraintLeft_toLeftOf="@id/clayout_publish_top"
                android:layout_marginStart="10dp"
                android:src="@mipmap/img_setting_top_back_black33"
                android:background="@null" />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/btn_publish_back"
                app:layout_constraintTop_toTopOf="@id/clayout_publish_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_publish_top"
                android:text="发布动态"
                android:layout_marginStart="10dp"
                android:includeFontPadding="false"
                android:textColor="@color/color_history_title"
                android:textSize="18sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_public_picture"
            android:layout_width="match_parent"
            android:layout_height="160dp">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_publish"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintTop_toTopOf="@id/clayout_public_picture"
                app:layout_constraintBottom_toBottomOf="@id/clayout_public_picture"
                app:layout_constraintLeft_toLeftOf="@id/clayout_public_picture" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_publish_title"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_publish_title"
                android:layout_width="311dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                app:layout_constraintLeft_toLeftOf="@id/clayout_publish_title"
                android:textSize="17sp"
                android:textColor="@color/color_txt_publish_title"
                android:hint="填写标题"
                android:textColorHint="@color/color_txt_publish_title_hint"
                android:textCursorDrawable="@drawable/shape_edit_publish"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxLength="18"
                android:background="@null" />

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/img_publish_delete"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/edit_publish_title"
                android:src="@mipmap/img_publish_title_delete"
                android:background="@null" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_bg_divider_publish"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_publish_content"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:textSize="14sp"
            android:textColor="@color/color_txt_publish_title"
            android:hint="添加正文"
            android:gravity="top|start"
            android:textColorHint="@color/color_txt_publish_title_hint"
            android:textCursorDrawable="@drawable/shape_edit_publish"
            android:paddingTop="17dp"
            android:paddingStart="17dp"
            android:background="@null" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_bg_divider_publish"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_publish_info"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="4dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简介"
                android:textColor="@color/color_txt_publish_des"
                app:layout_constraintTop_toTopOf="@id/clayout_publish_info"
                app:layout_constraintBottom_toBottomOf="@id/clayout_publish_info"
                app:layout_constraintLeft_toLeftOf="@id/clayout_publish_info"
                android:layout_marginStart="14dp" />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_right_arrow"
                app:layout_constraintTop_toTopOf="@id/clayout_publish_info"
                app:layout_constraintBottom_toBottomOf="@id/clayout_publish_info"
                app:layout_constraintRight_toRightOf="@id/clayout_publish_info"
                android:layout_marginEnd="14dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_publish_desc"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="4dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述"
                android:textColor="@color/color_txt_publish_des"
                app:layout_constraintTop_toTopOf="@id/clayout_publish_desc"
                app:layout_constraintBottom_toBottomOf="@id/clayout_publish_desc"
                app:layout_constraintLeft_toLeftOf="@id/clayout_publish_desc"
                android:layout_marginStart="14dp" />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_right_arrow"
                app:layout_constraintTop_toTopOf="@id/clayout_publish_desc"
                app:layout_constraintBottom_toBottomOf="@id/clayout_publish_desc"
                app:layout_constraintRight_toRightOf="@id/clayout_publish_desc"
                android:layout_marginEnd="14dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_bg_divider_publish"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_publish"
            android:layout_width="274dp"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:background="@drawable/ps_bg_next">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布动态"
                android:textStyle="bold"
                android:textColor="@color/ps_color_white"
                app:layout_constraintTop_toTopOf="@id/clayout_publish"
                app:layout_constraintBottom_toBottomOf="@id/clayout_publish"
                app:layout_constraintLeft_toLeftOf="@id/clayout_publish"
                app:layout_constraintRight_toRightOf="@id/clayout_publish"
                android:textSize="16sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>