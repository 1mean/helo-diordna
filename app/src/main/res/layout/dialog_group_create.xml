<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="193dp"
    android:background="@drawable/shape_bg_short_collect">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clayout_short_collect_top"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建收藏夹"
            android:textColor="@color/color_txt_video_title_recommend"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/clayout_short_collect_top"
            app:layout_constraintLeft_toLeftOf="@id/clayout_short_collect_top"
            app:layout_constraintRight_toRightOf="@id/clayout_short_collect_top"
            app:layout_constraintTop_toTopOf="@id/clayout_short_collect_top" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/str_cancel"
            android:textColor="@color/color_txt_video_title_recommend"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/clayout_short_collect_top"
            app:layout_constraintTop_toTopOf="@id/clayout_short_collect_top" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="@string/str_sure"
            android:textColor="@color/color_txt_video_title_recommend"
            android:textSize="13sp"
            app:layout_constraintRight_toRightOf="@id/clayout_short_collect_top"
            app:layout_constraintTop_toTopOf="@id/clayout_short_collect_top" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_group_create"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0.5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_group_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_group_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintLeft_toRightOf="@id/card_group_create"
        app:layout_constraintTop_toTopOf="@id/card_group_create"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="输入收藏夹名称"
        android:textColorHint="@color/color_txt_bottom_selected"
        android:textSize="14sp"
        android:textColor="@color/color_txt_login_username"
        android:textCursorDrawable="@drawable/shape_input_edit" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/card_group_create"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_logout_divider" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置为公开"
        android:textSize="15sp"
        android:textColor="@color/color_txt_video_title_recommend"
        app:layout_constraintLeft_toLeftOf="@id/card_group_create"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="37dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/card_group_create"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="13sp"
        android:textColor="@color/color_txt_setting_item_title"
        android:text="公开后将展示在主页，有机会被推荐给其他人"/>

    <com.github.iielse.switchbutton.SwitchView
        android:id="@+id/switch_open"
        android:layout_width="43dp"
        android:layout_height="20dp"
        app:hasShadow="false"
        app:isOpened="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="17dp" />

</androidx.constraintlayout.widget.ConstraintLayout>