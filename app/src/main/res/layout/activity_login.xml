<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_loginstyle_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_phone_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/clayout_loginstyle_phone"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="@id/clayout_loginstyle_phone"
                android:layout_marginTop="145dp"
                android:text="手机号登陆"
                android:textSize="25sp"
                android:textColor="@color/color_txt_login_username"
                android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txt_phone_login"
                app:layout_constraintTop_toBottomOf="@id/txt_phone_login"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="@color/color_txt_login_passward"
                android:text="未注册手机登陆后将自动创建账号" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_login_phone"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/txt_phone_login"
                android:layout_marginTop="54dp"
                android:background="@drawable/shape_bg_login_phone"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_loging_desc_txt"
                    android:textSize="13sp"
                    android:text="+86"
                    app:layout_constraintTop_toTopOf="@id/clayout_login_phone"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_login_phone"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_login_phone"
                    android:layout_marginStart="20dp" />

            <View
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:background="@color/grey200"
                    app:layout_constraintTop_toTopOf="@id/clayout_login_phone"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_login_phone"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_login_phone"
                    android:layout_marginStart="63dp" />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_login_phone"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    app:layout_constraintRight_toRightOf="@id/clayout_login_phone"
                    android:hint="请输入手机号码"
                    android:textColorHint="@color/color_txt_bottom_selected"
                    android:textSize="14sp"
                    android:textColor="@color/color_txt_login_username"
                    android:textCursorDrawable="@drawable/shape_edit_login_phone"
                    android:maxLines="1"
                    style="@style/myEditTextStyle"
                    android:background="@null"
                    android:inputType="phone|number"
                    android:digits="1234567890"
                    android:maxLength="11" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_login_code"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/clayout_login_phone"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_bg_login_phone"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp">

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_login_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:hint="请输入验证码"
                    android:textColorHint="@color/color_txt_bottom_selected"
                    android:textSize="14sp"
                    android:textColor="@color/color_txt_video_info_name"
                    android:textCursorDrawable="@drawable/shape_edit_login_phone"
                    android:maxLines="1"
                    android:maxLength="8"
                    style="@style/myEditTextStyle"
                    android:background="@null"
                    android:inputType="phone|number"
                    android:digits="1234567890" />

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_bg_green"
                    android:textSize="14sp"
                    android:text="获取验证码"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:background="@null"
                    android:textAppearance="@style/commonEditStyle"
                    app:layout_constraintTop_toTopOf="@id/clayout_login_code"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_login_code"
                    app:layout_constraintEnd_toEndOf="@id/clayout_login_code"
                    android:layout_marginEnd="24dp" />

            <View
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:background="@color/grey200"
                    app:layout_constraintTop_toTopOf="@id/clayout_login_code"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_login_code"
                    app:layout_constraintRight_toLeftOf="@id/btn_login_code"
                    android:layout_marginEnd="17dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_login"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/clayout_login_code"
                android:layout_marginTop="16dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:text="登录"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@drawable/shape_bg_login2" />

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/clayout_to_login_secret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_login"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号密码登录"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_txt_login_passward" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_arrow_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_loginstyle_secret"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_secret_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/clayout_loginstyle_secret"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="@id/clayout_loginstyle_secret"
                android:layout_marginTop="145dp"
                android:text="密码登录"
                android:textSize="25sp"
                android:textColor="@color/color_txt_logining"
                android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txt_secret_login"
                app:layout_constraintTop_toBottomOf="@id/txt_secret_login"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="@color/color_txt_login_passward"
                android:text="新用户可进行注册，注册成功后自动登录" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_login_secret"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/txt_secret_login"
                android:layout_marginTop="54dp"
                android:background="@drawable/shape_bg_login_phone"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_loging_desc_txt"
                    android:textSize="13sp"
                    android:text="账号"
                    app:layout_constraintTop_toTopOf="@id/clayout_login_secret"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_login_secret"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_login_secret"
                    android:layout_marginStart="20dp" />

            <View
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:background="@color/grey200"
                    app:layout_constraintTop_toTopOf="@id/clayout_login_secret"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_login_secret"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_login_secret"
                    android:layout_marginStart="63dp" />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_login_secret"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    app:layout_constraintRight_toRightOf="@id/clayout_login_secret"
                    android:hint="请输入账号登录或注册"
                    android:textColorHint="@color/color_txt_bottom_selected"
                    android:textSize="14sp"
                    android:textColor="@color/color_txt_login_username"
                    android:textCursorDrawable="@drawable/shape_edit_login_phone"
                    android:maxLines="1"
                    style="@style/myEditTextStyle"
                    android:background="@null" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_secret"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/clayout_login_secret"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_bg_login_phone"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_login_secret_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_loging_desc_txt"
                    android:textSize="14sp"
                    android:text="密码"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@id/clayout_secret"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_secret"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_secret"
                    android:layout_marginStart="20dp" />

            <View
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:background="@color/grey200"
                    app:layout_constraintTop_toTopOf="@id/clayout_secret"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_secret"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_secret"
                    android:layout_marginStart="63dp" />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_login_secret_code"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:hint="请输入密码"
                    app:layout_constraintRight_toRightOf="@id/clayout_secret"
                    android:textColorHint="@color/color_txt_bottom_selected"
                    android:textSize="14sp"
                    android:textColor="@color/color_txt_login_username"
                    android:textCursorDrawable="@drawable/shape_edit_login_phone"
                    android:maxLines="1"
                    style="@style/myEditTextStyle"
                    android:background="@null" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_register_secret"
                android:layout_width="0dp"
                android:layout_height="44dp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintTop_toBottomOf="@id/clayout_secret"
                app:layout_constraintLeft_toLeftOf="@id/clayout_secret"
                android:layout_marginTop="16dp"
                android:text="注册"
                android:textSize="16sp"
                android:textColor="@color/color_txt_logining"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@drawable/shape_login_register" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_login_secret"
                android:layout_width="0dp"
                android:layout_height="44dp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintTop_toBottomOf="@id/clayout_secret"
                app:layout_constraintRight_toRightOf="@id/clayout_secret"
                android:layout_marginTop="16dp"
                android:text="登录"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@drawable/shape_bg_login2" />

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/clayout_to_login_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_login_secret"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机短信登录"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_txt_login_passward" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_arrow_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_login_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@null"
            android:src="@mipmap/img_setting_top_back_black33" />

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/clayout_login_demand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="320dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_login_select"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_login_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_login_select"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_login_select"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_login_select"
                    app:layout_constraintRight_toRightOf="@id/clayout_login_select"
                    android:src="@mipmap/img_mine_unselected" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_login_demand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:textColor="@color/color_loging_desc_txt"
                android:textSize="12sp"
                android:includeFontPadding="false" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_login_bottom"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_login_wechat"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_login_bottom"
                app:layout_constraintRight_toRightOf="@id/clayout_login_bottom"
                android:src="@mipmap/img_wechat_login"
                android:background="@null" />

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_login_qq"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_login_bottom"
                app:layout_constraintRight_toRightOf="@id/clayout_login_bottom"
                app:layout_constraintHorizontal_bias="0.3"
                android:src="@mipmap/img_qq_login"
                android:background="@null" />

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_login_wb"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_login_bottom"
                app:layout_constraintRight_toRightOf="@id/clayout_login_bottom"
                app:layout_constraintHorizontal_bias="0.7"
                android:src="@mipmap/img_weibo_login"
                android:background="@null" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>