<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home"
        android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="32.66dp"
            android:background="@color/color_white_lucency" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/clayout_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:elevation="0dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <!--enterAlways:下拉时，立即显示Appbar-->
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tb_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|enterAlways">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_top_header"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_marginStart="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/white" />

                    <!-- <androidx.appcompat.widget.AppCompatImageView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             app:layout_constraintRight_toRightOf="@id/img_head"
                             app:layout_constraintBottom_toBottomOf="@id/img_head"
                             android:src="@mipmap/img_short" />-->

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 144dp -->
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_home_search"
                        android:layout_width="240dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="17dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_home_search">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_home_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_home_search"
                            app:layout_constraintTop_toTopOf="@id/clayout_home_search"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_home_search"
                            android:layout_marginStart="12dp"
                            android:src="@mipmap/img_top_search" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_home_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            app:layout_constraintLeft_toRightOf="@id/img_home_search"
                            app:layout_constraintTop_toTopOf="@id/clayout_home_search"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_home_search"
                            android:includeFontPadding="false"
                            android:layout_marginStart="9dp"
                            android:textColor="@color/color_search_text"
                            android:text="大熊猫和花" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ib_message"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@mipmap/img_home_message"
                        android:background="@null"
                        android:layout_gravity="center_vertical|right"
                        tools:ignore="RtlHardcoded" />

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_home_top_more"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center_vertical|right"
                        tools:ignore="RtlHardcoded">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_dark"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@null"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/white"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_home_top_more"
                            app:layout_constraintRight_toRightOf="@id/clayout_home_top_more"
                            app:layout_constraintTop_toTopOf="@id/clayout_home_top_more"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_home_top_more"
                            android:src="@mipmap/img_home_top" />

                    <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            app:layout_constraintRight_toRightOf="@id/clayout_home_top_more"
                            app:layout_constraintTop_toTopOf="@id/clayout_home_top_more"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:visibility="gone"
                            android:background="@drawable/shape_bg_home_notice" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <com.example.helo_base.magic.MagicIndicator
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="36dp"
                android:background="@color/color_bg_divider_home"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="36.5dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.appcompat.widget.LinearLayoutCompat>