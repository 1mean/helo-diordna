<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_collect_list_top"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_collect_list_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_collect_list_top"
                android:background="@null"
                android:src="@mipmap/img_back_1" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_collect_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ibn_collect_list_back"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/clayout_collect_list_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_collect_list_top"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:text="@string/str_mine_later"
                android:textColor="@color/color_history_title"
                android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_collect_list_manager"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@id/clayout_collect_list_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_collect_list_top"
                app:layout_constraintRight_toRightOf="@id/clayout_collect_list_top"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/color_history_manager"
                android:text="@string/str_manager" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/bar_collect"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                app:elevation="0dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll"
                    app:contentScrim="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_top_content"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_gravity="bottom"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="1">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_collect_list_cover"
                            android:layout_width="128dp"
                            android:layout_height="match_parent"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_top_content"
                            android:layout_marginStart="12dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="@id/img_collect_list_cover"
                            app:layout_constraintBottom_toBottomOf="@id/img_collect_list_cover"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="4dp"
                            android:src="@mipmap/img_group_cover_on" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_group_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_txt_group_title"
                            app:layout_constraintLeft_toRightOf="@id/img_collect_list_cover"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="@id/clayout_top_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_collect_list_creator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/color_txt_group_creator"
                            app:layout_constraintLeft_toLeftOf="@id/txt_group_title"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_top_content"
                            android:layout_marginBottom="4dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_list_collect_mid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_collect_list_counts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_list_collect_mid"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_list_collect_mid"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_list_collect_mid"
                    android:layout_marginStart="12dp"
                    android:textSize="12sp"
                    android:textColor="@color/color_txt_group_creator" />

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llayout_collect_list_like"
                    android:layout_width="46dp"
                    android:layout_height="35dp"
                    app:layout_constraintRight_toRightOf="@id/clayout_list_collect_mid"
                    android:layout_marginEnd="55dp"
                    app:layout_constraintTop_toTopOf="@id/clayout_list_collect_mid"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_list_collect_mid"
                    android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_collect_list_like" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_video_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="10sp"
                        android:text="@string/str_like"
                        android:textColor="@color/color_video_comment_txt"
                        tools:ignore="SmallSp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llayout_collect_list_share"
                    android:layout_width="46dp"
                    android:layout_height="35dp"
                    app:layout_constraintRight_toRightOf="@id/clayout_list_collect_mid"
                    app:layout_constraintTop_toTopOf="@id/clayout_list_collect_mid"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_list_collect_mid"
                    android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_collect_list_share"
                        android:layout_gravity="center_horizontal" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="10sp"
                        android:text="@string/str_share"
                        android:textColor="@color/color_video_comment_txt"
                        tools:ignore="SmallSp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.66dp"
                    android:background="@color/color_bg_cm_drivider"
                    android:layout_marginStart="12dp"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_list_collect_mid" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.example.pandas.ui.view.recyclerview.SwipRecyclerView
                android:id="@+id/rv_collect_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.appcompat.widget.LinearLayoutCompat>