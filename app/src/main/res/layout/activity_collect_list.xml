<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:elevation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/color_bg_cute_pet">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tb_room"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:layout_collapseMode="pin">

                <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ibn_later_back"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:src="@mipmap/img_back_1" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_later_manager"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical|right"
                        android:textSize="14sp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/color_history_manager"
                        android:text="@string/str_manager"
                        tools:ignore="RtlHardcoded" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_top_content"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="bottom">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_collect_list_cover"
                        android:layout_width="128dp"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_top_content"
                        android:layout_marginStart="12dp" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/img_collect_list_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toRightOf="@id/img_collect_list_cover"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="@id/clayout_top_content" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/img_collect_list_creator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/color_txt_user_unattention"
                        app:layout_constraintLeft_toLeftOf="@id/img_collect_list_title"
                        android:layout_marginStart="10dp"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_top_content"
                        android:layout_marginBottom="4dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_list_collect_mid"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_collect_list_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_list_collect_mid"
                app:layout_constraintBottom_toBottomOf="@id/clayout_list_collect_mid"
                app:layout_constraintLeft_toLeftOf="@id/clayout_list_collect_mid"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:textColor="@color/color_txt_user_unattention"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.pandas.ui.view.recyclerview.SwipRecyclerView
            android:id="@+id/rv_collect_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>