<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_collect_list_top"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_collect_list_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_collect_list_top"
                android:background="@null"
                android:src="@mipmap/img_back_1" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_collect_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ibn_collect_list_back"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/clayout_collect_list_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_collect_list_top"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="@color/color_history_title" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_collect_list_manager"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@id/clayout_collect_list_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_collect_list_top"
                app:layout_constraintRight_toRightOf="@id/clayout_collect_list_top"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:textColor="@color/color_history_manager"
                android:text="@string/str_manager" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.pandas.ui.view.recyclerview.SwipRecyclerView
            android:id="@+id/rv_collect_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
</androidx.appcompat.widget.LinearLayoutCompat>