<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="168dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_one_content"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/shape_bg_one">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_one_cover"
                android:layout_width="150dp"
                android:layout_height="94dp"
                app:layout_constraintTop_toTopOf="@id/clayout_one_content"
                app:layout_constraintLeft_toLeftOf="@id/clayout_one_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_one_title"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_one_content"
                app:layout_constraintRight_toRightOf="@id/clayout_one_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/color_txt_fans_self"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_one_name"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:textSize="12sp"
                android:textColor="@color/color_txt_tab"
                app:layout_constraintBottom_toBottomOf="@id/img_one_cover"
                app:layout_constraintLeft_toRightOf="@id/img_one_cover"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="17dp" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_one_info"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:textSize="12sp"
                android:textColor="@color/color_txt_tab"
                app:layout_constraintBottom_toBottomOf="@id/img_one_cover"
                app:layout_constraintLeft_toRightOf="@id/img_one_cover"
                android:layout_marginStart="10dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/clayout_one_bottom"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                app:layout_constraintLeft_toLeftOf="@id/clayout_one_content"
                app:layout_constraintRight_toRightOf="@id/clayout_one_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@id/clayout_one_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/shape_bg_one_bottom"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_info_one_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/img_one_info_yellow" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_bottom_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="11dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/color_txt_tab"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>