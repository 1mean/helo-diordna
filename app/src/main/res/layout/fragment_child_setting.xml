<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:background="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view_header"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_mine_header"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="@id/view_header"
                        app:layout_constraintLeft_toLeftOf="@id/view_header"
                        android:layout_marginTop="23dp"
                        android:layout_marginStart="17dp" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_mine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/view_header"
                        app:layout_constraintLeft_toRightOf="@id/img_mine_header"
                        android:layout_marginTop="17dp"
                        android:layout_marginStart="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="和叶小可怜" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_mine_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@id/txt_mine_name"
                        app:layout_constraintTop_toBottomOf="@id/txt_mine_name"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/img_mine_male" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_mine_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/txt_mine_name"
                        android:layout_marginStart="5dp"
                        app:layout_constraintBottom_toBottomOf="@id/txt_mine_name"
                        android:src="@mipmap/img_level2" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="硬币：20"
                        android:textSize="12sp"
                        android:textColor="@color/color_txt_tab"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        app:layout_constraintBottom_toBottomOf="@id/img_mine_header"
                        app:layout_constraintLeft_toLeftOf="@id/txt_mine_name" />

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_self"
                        android:layout_width="79dp"
                        android:layout_height="28dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_mine_name"
                        app:layout_constraintRight_toRightOf="@id/view_header"
                        android:background="@drawable/shape_self_text_coin"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_self_zone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/clayout_self"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_self"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_self"
                            android:layout_marginStart="12dp"
                            android:text="@string/str_mine_zone"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/clayout_self"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_self"
                            app:layout_constraintLeft_toRightOf="@id/txt_self_zone"
                            android:src="@mipmap/img_self_zone_arrow" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_mine_zone"
                        style="@style/style_mine_top_clayout">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_mine_zone"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_mine_zone"
                            app:layout_constraintRight_toRightOf="@id/clayout_mine_zone"
                            app:layout_constraintTop_toTopOf="@id/clayout_mine_zone"
                            android:text="15"
                            style="@style/style_mine_top_text" />

                    <androidx.appcompat.widget.AppCompatTextView
                            app:layout_constraintLeft_toLeftOf="@id/clayout_mine_zone"
                            app:layout_constraintRight_toRightOf="@id/clayout_mine_zone"
                            app:layout_constraintTop_toBottomOf="@id/txt_mine_zone"
                            style="@style/style_mine_top_text_name"
                            android:text="@string/str_zone" />

                    <View
                            style="@style/style_mine_top_drivider"
                            app:layout_constraintTop_toTopOf="@id/clayout_mine_zone"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_mine_zone"
                            app:layout_constraintRight_toRightOf="@id/clayout_mine_zone" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_mine_follow"
                        style="@style/style_mine_top_clayout">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_mine_follow"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_mine_follow"
                            app:layout_constraintRight_toRightOf="@id/clayout_mine_follow"
                            app:layout_constraintTop_toTopOf="@id/clayout_mine_follow"
                            style="@style/style_mine_top_text" />

                    <androidx.appcompat.widget.AppCompatTextView
                            app:layout_constraintLeft_toLeftOf="@id/clayout_mine_follow"
                            app:layout_constraintRight_toRightOf="@id/clayout_mine_follow"
                            app:layout_constraintTop_toBottomOf="@id/txt_mine_follow"
                            style="@style/style_mine_top_text_name"
                            android:text="@string/str_follow" />

                    <View
                            style="@style/style_mine_top_drivider"
                            app:layout_constraintTop_toTopOf="@id/clayout_mine_follow"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_mine_follow"
                            app:layout_constraintRight_toRightOf="@id/clayout_mine_follow" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_mine_fans"
                        style="@style/style_mine_top_clayout">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_mine_fans"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_mine_fans"
                            app:layout_constraintRight_toRightOf="@id/clayout_mine_fans"
                            app:layout_constraintTop_toTopOf="@id/clayout_mine_fans"
                            android:text="6"
                            style="@style/style_mine_top_text" />

                    <androidx.appcompat.widget.AppCompatTextView
                            app:layout_constraintLeft_toLeftOf="@id/clayout_mine_fans"
                            app:layout_constraintRight_toRightOf="@id/clayout_mine_fans"
                            app:layout_constraintTop_toBottomOf="@id/txt_mine_fans"
                            style="@style/style_mine_top_text_name"
                            android:text="@string/str_fans" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>


        <!--<androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                app:cardElevation="0.3dp"
                android:background="@color/white">-->

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cv_error"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:layout_marginEnd="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_log_text1"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日志文件"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="38dp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="35dp">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_error_log"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="错误日志、崩溃文件"
                            android:textColor="@color/color_self_txt_log"
                            android:textSize="10sp"
                            android:layout_gravity="center_vertical"
                            android:includeFontPadding="false"
                            tools:ignore="SmallSp" />

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="7dp"
                            android:src="@mipmap/img_self_arrow_right" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/cv_file"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_log_text1"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分中心/任务"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="38dp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="36dp">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_file"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="错误日志、崩溃文件"
                            android:textColor="@color/color_self_txt_log"
                            android:textSize="10sp"
                            android:layout_gravity="center_vertical"
                            android:includeFontPadding="false"
                            tools:ignore="SmallSp" />

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="7dp"
                            android:src="@mipmap/img_self_arrow_right" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                app:cardElevation="0dp"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_download"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/clayout_download"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_download"
                            app:layout_constraintRight_toRightOf="@id/clayout_download"
                            android:src="@mipmap/img_self_down_blue" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mine_download"
                            android:textSize="12sp"
                            android:textColor="@color/color_mine_txt_download"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_download"
                            app:layout_constraintRight_toRightOf="@id/clayout_download"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_download"
                            android:layout_marginTop="5dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_history"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/clayout_history"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_history"
                            app:layout_constraintRight_toRightOf="@id/clayout_history"
                            android:src="@mipmap/img_self_history_blue" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mine_history"
                            android:textSize="12sp"
                            android:textColor="@color/color_mine_txt_download"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_history"
                            app:layout_constraintRight_toRightOf="@id/clayout_history"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_history"
                            android:layout_marginTop="5dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_collect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/clayout_collect"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_collect"
                            app:layout_constraintRight_toRightOf="@id/clayout_collect"
                            android:src="@mipmap/img_self_collect_blue" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mine_collect"
                            android:textSize="12sp"
                            android:textColor="@color/color_mine_txt_download"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_collect"
                            app:layout_constraintRight_toRightOf="@id/clayout_collect"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_collect"
                            android:layout_marginTop="5dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_later"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/clayout_later"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_later"
                            app:layout_constraintRight_toRightOf="@id/clayout_later"
                            android:src="@mipmap/img_self_later_blue" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mine_later"
                            android:textSize="12sp"
                            android:textColor="@color/color_mine_txt_download"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_later"
                            app:layout_constraintRight_toRightOf="@id/clayout_later"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_later"
                            android:layout_marginTop="5dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_setting_love"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_setting_love"
                        android:layout_marginStart="17dp"
                        app:layout_constraintTop_toTopOf="@id/clayout_setting_love"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_setting_love"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_setting_love" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/clayout_setting_love"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_setting_love"
                        android:layout_marginStart="56dp"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="我喜欢" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_setting_loves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_setting_love"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_setting_love"
                        android:layout_marginStart="56dp"
                        android:layout_marginBottom="11dp"
                        android:textSize="11sp"
                        android:textColor="@color/color_home_music_text_unselected"
                        android:text="112个视频" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_setting_love_reco"
                        android:layout_marginEnd="17dp"
                        app:layout_constraintTop_toTopOf="@id/clayout_setting_love"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_setting_love"
                        app:layout_constraintRight_toRightOf="@id/clayout_setting_love" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多服务"
                        android:textColor="@color/color_video_item_title"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="18dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_setting"
                        android:layout_marginTop="10dp"
                        style="@style/style_self_setting_item">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_left_setting"
                            app:layout_constraintTop_toTopOf="@id/clayout_setting"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_setting"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_setting"
                            style="@style/style_self_setting_left_image"
                            android:src="@mipmap/img_left_setting" />

                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/style_self_setting_name"
                            app:layout_constraintTop_toTopOf="@id/clayout_setting"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_setting"
                            app:layout_constraintLeft_toRightOf="@id/img_left_setting"
                            android:text="@string/str_setting" />

                    <!--<androidx.appcompat.widget.AppCompatTextView
                            style="@style/style_self_setting_desc"
                            app:layout_constraintTop_toTopOf="@id/clayout_setting"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_setting"
                            app:layout_constraintRight_toRightOf="@id/clayout_setting"
                            android:text="@string/str_setting_info" />-->

                    <androidx.appcompat.widget.AppCompatImageView
                            style="@style/style_self_setting_arrow"
                            app:layout_constraintTop_toTopOf="@id/clayout_setting"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_setting"
                            app:layout_constraintRight_toRightOf="@id/clayout_setting" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clayout_mine_exp"
                        style="@style/style_self_setting_item">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_left_outlock"
                            app:layout_constraintTop_toTopOf="@id/clayout_mine_exp"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_mine_exp"
                            app:layout_constraintLeft_toLeftOf="@id/clayout_mine_exp"
                            style="@style/style_self_setting_left_image"
                            android:src="@mipmap/img_left_exp_blue" />

                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/style_self_setting_name"
                            app:layout_constraintTop_toTopOf="@id/clayout_mine_exp"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_mine_exp"
                            app:layout_constraintLeft_toRightOf="@id/img_left_outlock"
                            android:text="@string/str_mine_exp" />

                    <!--<androidx.appcompat.widget.AppCompatTextView
                            style="@style/style_self_setting_desc"
                            app:layout_constraintTop_toTopOf="@id/clayout_other_setting"
                            app:layout_constraintBottom_toBottomOf="@id/clayout_other_setting"
                            app:layout_constraintRight_toRightOf="@id/clayout_other_setting"
                            android:text="@string/str_setting_other_info" />-->

                    <androidx.appcompat.widget.AppCompatImageView
