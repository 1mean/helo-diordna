<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="92dp">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_minicover"
            android:layout_width="128dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitXY"
            android:layout_marginStart="12dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_duration"
            android:layout_width="30dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintHorizontal_bias="0.32"
            android:textColor="@color/white"
            android:background="@drawable/shape_video_item_duration"
            android:gravity="center"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_video_item_title"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/img_minicover"
            android:layout_marginStart="11dp"
            android:maxEms="14"
            android:lines="2"
            app:layout_constraintTop_toTopOf="@id/img_minicover"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="12dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/txt_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="29dp"
            android:textSize="12sp"
            android:textColor="@color/color_video_item_name" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/txt_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="11dp"
            android:textSize="12sp"
            android:textColor="@color/color_video_item_name" />

    <View
            android:layout_width="0dp"
            android:layout_height="0.2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/color_video_divider"
            android:layout_marginStart="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>