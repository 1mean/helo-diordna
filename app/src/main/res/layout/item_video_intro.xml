<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/ripple_landscape_item"
        android:layout_height="92dp"
        android:clickable="true"
        android:focusable="true">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_video_reco_cover"
            android:layout_width="128dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp"
            android:scaleType="fitXY" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_reco_duration"
            android:layout_width="32dp"
            android:layout_height="15dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/img_video_reco_cover"
            app:layout_constraintRight_toRightOf="@id/img_video_reco_cover"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:background="@drawable/shape_video_item_duration"
            tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_reco_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_video_item_title"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/img_video_reco_cover"
            android:layout_marginStart="11dp"
            android:maxEms="12"
            android:lines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/img_video_reco_cover" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_video_reco_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/txt_video_reco_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="27dp"
            android:src="@mipmap/img_up2" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_reco_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/img_video_reco_author"
            app:layout_constraintBottom_toBottomOf="@id/img_video_reco_author"
            android:layout_marginStart="3dp"
            android:textColor="@color/color_video_item_name"
            android:gravity="center"
            android:textSize="11sp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_video_reco_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/img_video_reco_author"
            app:layout_constraintBottom_toBottomOf="@id/img_video_reco_cover"
            android:src="@mipmap/img_time" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_video_reco_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/img_video_reco_time"
            app:layout_constraintBottom_toBottomOf="@id/img_video_reco_time"
            android:layout_marginStart="3dp"
            android:textSize="11sp"
            android:includeFontPadding="false"
            android:textColor="@color/color_video_item_name" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_video_reco_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@id/text_video_reco_time"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_music_more"
                app:layout_constraintLeft_toLeftOf="@id/view_video_reco_more"
                app:layout_constraintRight_toRightOf="@id/view_video_reco_more"
                app:layout_constraintBottom_toBottomOf="@id/view_video_reco_more"
                android:layout_marginBottom="3dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="0dp"
            android:layout_height="0.2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/color_video_divider"
            android:layout_marginStart="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>