<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_20_white">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_timer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="休息一下吧"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="34dp"
            android:layout_marginStart="24dp"
            android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定时关闭，合理分配时间"
            android:textColor="#717579"
            app:layout_constraintTop_toBottomOf="@id/txt_timer_title"
            app:layout_constraintLeft_toLeftOf="@id/txt_timer_title"
            android:layout_marginTop="8dp"
            android:textSize="13sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_timer_time"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginTop="119dp"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_timer_time1"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time"
                app:layout_constraintRight_toRightOf="@id/clayout_timer_time"
                android:background="@drawable/shape_timer_normal"
                app:layout_constraintHorizontal_bias="0.1">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每隔"
                    android:textColor="#6e7075"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time1"
                    app:layout_constraintRight_toRightOf="@id/clayout_timer_time1"
                    app:layout_constraintTop_toTopOf="@id/clayout_timer_time1"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_timer_time1"
                    app:layout_constraintVertical_bias="0.15" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时"
                    android:textColor="#6e7075"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time1"
                    app:layout_constraintRight_toRightOf="@id/clayout_timer_time1"
                    app:layout_constraintTop_toTopOf="@id/clayout_timer_time1"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_timer_time1"
                    app:layout_constraintVertical_bias="0.85" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#6e7075"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time1"
                    app:layout_constraintRight_toRightOf="@id/clayout_timer_time1"
                    app:layout_constraintTop_toTopOf="@id/clayout_timer_time1"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_timer_time1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_timer_time2"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time"
                app:layout_constraintRight_toRightOf="@id/clayout_timer_time"
                android:background="@drawable/shape_timer_normal">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每隔"
                    android:textColor="#6e7075"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time2"
                    app:layout_constraintRight_toRightOf="@id/clayout_timer_time2"
                    app:layout_constraintTop_toTopOf="@id/clayout_timer_time2"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_timer_time2"
                    app:layout_constraintVertical_bias="0.15" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时"
                    android:textColor="#6e7075"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time2"
                    app:layout_constraintRight_toRightOf="@id/clayout_timer_time2"
                    app:layout_constraintTop_toTopOf="@id/clayout_timer_time2"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_timer_time2"
                    app:layout_constraintVertical_bias="0.85" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#6e7075"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time2"
                    app:layout_constraintRight_toRightOf="@id/clayout_timer_time2"
                    app:layout_constraintTop_toTopOf="@id/clayout_timer_time2"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_timer_time2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_timer_time3"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time"
                app:layout_constraintRight_toRightOf="@id/clayout_timer_time"
                android:background="@drawable/shape_timer_normal"
                app:layout_constraintHorizontal_bias="0.9">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每隔"
                    android:textColor="#6e7075"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time3"
                    app:layout_constraintRight_toRightOf="@id/clayout_timer_time3"
                    app:layout_constraintTop_toTopOf="@id/clayout_timer_time3"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_timer_time3"
                    app:layout_constraintVertical_bias="0.15" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时"
                    android:textColor="#6e7075"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time3"
                    app:layout_constraintRight_toRightOf="@id/clayout_timer_time3"
                    app:layout_constraintTop_toTopOf="@id/clayout_timer_time3"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_timer_time3"
                    app:layout_constraintVertical_bias="0.85" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#6e7075"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_timer_time3"
                    app:layout_constraintRight_toRightOf="@id/clayout_timer_time3"
                    app:layout_constraintTop_toTopOf="@id/clayout_timer_time3"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_timer_time3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_timer_cancel"
            android:layout_width="148dp"
            android:layout_height="44dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_bg_timer_cancel"
            android:text="@string/str_cancel"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/clayout_timer_time"
            android:layout_marginTop="30dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_timer_comit"
            android:layout_width="148dp"
            android:layout_height="44dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_bg_timer_comit"
            android:text="开启定时"
            android:textColor="@color/color_bg_red"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/txt_timer_cancel" />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可进入设置中更改设置"
            app:layout_constraintTop_toBottomOf="@id/txt_timer_cancel"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="13sp"
            android:textColor="#727479" />

</androidx.constraintlayout.widget.ConstraintLayout>