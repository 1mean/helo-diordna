<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_delete_dialog"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:textColor="@color/color_txt_item_dialog_selfinfo"
            android:paddingTop="14dp"
            android:paddingStart="18dp"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingEnd="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:text="推荐样式"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <View
            android:background="@color/color_bg_divider_dialog"
            android:layout_width="match_parent"
            android:layout_height=".5dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_single"
            android:layout_width="match_parent"
            android:layout_height="52dp">

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/style_face_dialog_item_title"
                app:layout_constraintTop_toTopOf="@id/clayout_single"
                app:layout_constraintBottom_toBottomOf="@id/clayout_single"
                app:layout_constraintLeft_toLeftOf="@id/clayout_single"
                android:text="单列" />

        <com.lxj.xpopup.widget.CheckView
                android:id="@+id/check_single"
                android:layout_gravity="center_vertical"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/clayout_single"
                app:layout_constraintBottom_toBottomOf="@id/clayout_single"
                app:layout_constraintRight_toRightOf="@id/clayout_single" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View style="@style/style_live_dialog_divider" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_double"
            android:layout_width="match_parent"
            android:layout_height="52dp">

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/style_face_dialog_item_title"
                app:layout_constraintTop_toTopOf="@id/clayout_double"
                app:layout_constraintBottom_toBottomOf="@id/clayout_double"
                app:layout_constraintLeft_toLeftOf="@id/clayout_double"
                android:text="双列" />

        <com.lxj.xpopup.widget.CheckView
                android:id="@+id/check_double"
                android:layout_gravity="center_vertical"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/clayout_double"
                app:layout_constraintBottom_toBottomOf="@id/clayout_double"
                app:layout_constraintRight_toRightOf="@id/clayout_double" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:id="@+id/vv_divider"
            android:background="@color/color_viewpager_bg"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cancel"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/xpopup_cancel"
            android:textColor="@color/color_txt_cancel_dialog_selfinfo"
            android:textSize="15sp" />

</androidx.appcompat.widget.LinearLayoutCompat>