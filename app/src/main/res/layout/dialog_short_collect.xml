<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="461dp"
    android:background="@drawable/shape_bg_short_collect">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clayout_short_collect_top"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择收藏夹"
            android:textColor="@color/color_txt_video_title_recommend"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/clayout_short_collect_top"
            app:layout_constraintLeft_toLeftOf="@id/clayout_short_collect_top"
            app:layout_constraintRight_toRightOf="@id/clayout_short_collect_top"
            app:layout_constraintTop_toTopOf="@id/clayout_short_collect_top" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_short_collect_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/str_cancel"
            android:textColor="@color/color_txt_video_title_recommend"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/clayout_short_collect_top"
            app:layout_constraintRight_toRightOf="@id/clayout_short_collect_top"
            app:layout_constraintTop_toTopOf="@id/clayout_short_collect_top" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/clayout_short_collect_top" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clayout_short_collect_bottom"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_bg_bottom_collect">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="@color/color_bg_divider_bottom_collect"
            app:layout_constraintTop_toTopOf="@id/clayout_short_collect_bottom" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibtn_collect_add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/shape_collect_add"
            android:src="@mipmap/img_short_collect_add"
            app:layout_constraintBottom_toBottomOf="@id/clayout_short_collect_bottom"
            app:layout_constraintLeft_toLeftOf="@id/clayout_short_collect_bottom"
            app:layout_constraintTop_toTopOf="@id/clayout_short_collect_bottom" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="新建收藏夹"
            android:textColor="@color/color_txt_video_title_recommend"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/clayout_short_collect_bottom"
            app:layout_constraintLeft_toRightOf="@id/ibtn_collect_add"
            app:layout_constraintTop_toTopOf="@id/clayout_short_collect_bottom" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>