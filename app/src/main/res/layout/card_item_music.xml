<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardElevation="0.5dp"
        app:cardCornerRadius="5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            <TextView
                    android:id="@+id/txt_music_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/layout_title"
                    app:layout_constraintBottom_toBottomOf="@id/layout_title"
                    app:layout_constraintLeft_toLeftOf="@id/layout_title"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_music_title"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="@id/layout_title"
                    app:layout_constraintBottom_toBottomOf="@id/layout_title"
                    app:layout_constraintRight_toLeftOf="@id/layout_music_title_more">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_music_turn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_up"
                        app:layout_constraintTop_toTopOf="@id/layout_music_title"
                        app:layout_constraintBottom_toBottomOf="@id/layout_music_title"
                        app:layout_constraintRight_toRightOf="@id/layout_music_title"
                        app:layout_constraintLeft_toLeftOf="@id/layout_music_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_music_title_more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="@id/layout_title"
                    app:layout_constraintBottom_toBottomOf="@id/layout_title"
                    app:layout_constraintRight_toRightOf="@id/layout_title"
                    android:layout_marginEnd="5dp">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_music_title_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_more"
                        app:layout_constraintTop_toTopOf="@id/layout_music_title_more"
                        app:layout_constraintBottom_toBottomOf="@id/layout_music_title_more"
                        app:layout_constraintRight_toRightOf="@id/layout_music_title_more"
                        app:layout_constraintLeft_toLeftOf="@id/layout_music_title_more" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_music_love"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_next"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="2dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/layout_next"
                    app:layout_constraintBottom_toBottomOf="@id/layout_next"
                    app:layout_constraintLeft_toLeftOf="@id/layout_next"
                    app:layout_constraintRight_toRightOf="@id/layout_next"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textSize="11sp"
                        app:layout_constraintTop_toTopOf="@id/layout_next"
                        android:textColor="@color/color_txt_singer" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/img_next" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>