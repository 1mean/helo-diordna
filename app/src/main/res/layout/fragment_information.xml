<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_video_activity">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_video_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_video_info_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_video_info_head"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/color_bg_dialog"
                    app:layout_constraintTop_toTopOf="@id/clayout_video_info_top"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_video_info_top"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="12dp" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_video_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/img_video_info_head"
                    app:layout_constraintLeft_toRightOf="@id/img_video_info_head"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_txt_name_video"
                    android:includeFontPadding="false"
                    android:gravity="center" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/txt_video_info_name"
                    app:layout_constraintBottom_toBottomOf="@id/txt_video_info_name"
                    app:layout_constraintLeft_toRightOf="@id/txt_video_info_name"
                    android:layout_marginStart="5dp"
                    android:src="@mipmap/img_video_hz" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_video_info_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/txt_video_info_name"
                    app:layout_constraintBottom_toBottomOf="@id/img_video_info_head"
                    android:textColor="@color/color_txt_user_unattention"
                    android:textSize="11sp"
                    android:includeFontPadding="false"
                    tools:ignore="SmallSp" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_info_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/txt_video_info_fans"
                    app:layout_constraintBottom_toBottomOf="@id/txt_video_info_fans"
                    android:layout_marginStart="11dp"
                    android:textColor="@color/color_txt_user_unattention"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_video_info_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/txt_video_info_fans"
                    app:layout_constraintBottom_toBottomOf="@id/txt_video_info_fans"
                    android:textColor="@color/color_txt_user_unattention"
                    android:layout_marginStart="11dp"
                    android:textSize="10sp"
                    android:includeFontPadding="false"
                    android:visibility="gone"
                    tools:ignore="SmallSp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_video_info_follow"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    app:layout_constraintTop_toTopOf="@id/clayout_video_info_top"
                    app:layout_constraintRight_toRightOf="@id/clayout_video_info_top"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/shape_user_attention2">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_video_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:includeFontPadding="false"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_info_follow"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_info_follow"
                        app:layout_constraintTop_toTopOf="@id/clayout_video_info_follow"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_video_info_follow"
                        android:textSize="12sp"
                        android:textColor="@color/color_bg_grey"
                        android:text="@string/str_follow" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_video_info_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_video_info_top"
                    android:layout_marginTop="68dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_video_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="4dp"
                        app:layout_constraintTop_toTopOf="@id/cl_video_info_desc"
                        android:textColor="@color/color_txt_video_info_name" />
                <!--
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/txt_video_info_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="30dp"
                                        android:textSize="16sp"
                                        android:lines="1"
                                        android:ellipsize="end"
                                        android:textStyle="bold"
                                        android:lineSpacingExtra="4dp"
                                        app:layout_constraintTop_toTopOf="@id/cl_video_info_desc"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        android:textColor="@color/color_txt_video_info_desc" />
                -->

                <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btn_title_show"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintRight_toRightOf="@id/cl_video_info_desc"
                        app:layout_constraintTop_toTopOf="@id/cl_video_info_desc"
                        android:background="@null"
                        android:visibility="gone"
                        android:src="@mipmap/img_title_show" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_info_counts"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginTop="7dp"
                        app:layout_constraintLeft_toLeftOf="@id/cl_video_info_desc"
                        app:layout_constraintTop_toBottomOf="@id/txt_video_info_title"
                        android:visibility="gone"
                        android:src="@mipmap/img_video_play_times" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_info_counts"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        app:layout_constraintLeft_toRightOf="@id/image_info_counts"
                        app:layout_constraintBottom_toBottomOf="@id/image_info_counts"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/color_eye_txt_time"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:visibility="gone"
                        android:textSize="11sp" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_info_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        app:layout_constraintLeft_toRightOf="@id/txt_info_counts"
                        app:layout_constraintBottom_toBottomOf="@id/image_info_counts"
                        android:layout_marginStart="21dp"
                        android:visibility="gone"
                        android:src="@mipmap/img_video_comment" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_info_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        app:layout_constraintLeft_toRightOf="@id/image_info_comment"
                        app:layout_constraintBottom_toBottomOf="@id/image_info_counts"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/color_eye_txt_time"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:visibility="gone"
                        android:textSize="11sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:drawableLeft="@mipmap/img_video_found"
                    android:text="发现好视频"
                    app:layout_constraintTop_toBottomOf="@id/cl_video_info_desc"
                    android:layout_marginTop="16dp"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@id/cl_video_info_desc"
                    android:includeFontPadding="false"
                    android:drawablePadding="4dp"
                    android:textColor="@color/color_bg_blue" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/llayout_video_info_like"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/cl_video_info_desc">

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/item_like"
                        app:layout_constraintTop_toTopOf="@id/llayout_video_info_like"
                        app:layout_constraintBottom_toBottomOf="@id/llayout_video_info_like"
                        app:layout_constraintLeft_toLeftOf="@id/llayout_video_info_like"
                        app:layout_constraintRight_toRightOf="@id/llayout_video_info_like"
                        app:layout_constraintHorizontal_bias="0.15"
                        style="@style/style_video_llayout_item">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_like"
                            style="@style/style_video_image_item"
                            android:src="@mipmap/img_video_new_like" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_video_like"
                            style="@style/style_video_textview_item"
                            android:text="@string/str_like" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <!--<androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/item_dislike"
                        style="@style/style_video_llayout_item">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_dislike"
                            style="@style/style_video_image_item"
                            android:src="@mipmap/img_video_dislike" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_video_dislike"
                            style="@style/style_video_textview_item"
                            android:text="@string/str_dislike" />
                </androidx.appcompat.widget.LinearLayoutCompat>-->

                <!--<androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/item_love"
                        style="@style/style_video_llayout_item">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_love"
                            style="@style/style_video_image_item"
                            android:src="@mipmap/img_love_unpress" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_video_loves"
                            style="@style/style_video_textview_item"
                            android:text="@string/str_love" />
                </androidx.appcompat.widget.LinearLayoutCompat>-->

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/item_collect"
                        app:layout_constraintTop_toTopOf="@id/llayout_video_info_like"
                        app:layout_constraintBottom_toBottomOf="@id/llayout_video_info_like"
                        app:layout_constraintLeft_toLeftOf="@id/llayout_video_info_like"
                        app:layout_constraintRight_toRightOf="@id/llayout_video_info_like"
                        style="@style/style_video_llayout_item">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_collect"
                            style="@style/style_video_image_item"
                            android:src="@mipmap/img_video_new_collect" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_video_collect"
                            style="@style/style_video_textview_item"
                            android:text="@string/str_collect" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/item_share"
                        app:layout_constraintTop_toTopOf="@id/llayout_video_info_like"
                        app:layout_constraintBottom_toBottomOf="@id/llayout_video_info_like"
                        app:layout_constraintLeft_toLeftOf="@id/llayout_video_info_like"
                        app:layout_constraintRight_toRightOf="@id/llayout_video_info_like"
                        app:layout_constraintHorizontal_bias="0.85"
                        style="@style/style_video_llayout_item">

                    <androidx.appcompat.widget.AppCompatImageView
                            style="@style/style_video_image_item"
                            android:src="@mipmap/img_video_new_share" />

                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/style_video_textview_item"
                            android:text="@string/str_share" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:layout_marginTop="14dp"
                android:background="@color/color_bg_video_info_divider" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_video_recommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>