<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:id="@+id/cv_item"
        android:background="@color/color_bg_item2"
        tools:ignore="contentDescription">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/img_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:scaleType="fitXY" />


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="87dp">

            <TextView
                    android:id="@+id/txt_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:text="ni" />

            <TextView
                    android:id="@+id/txt_typeValue"
                    android:layout_width="36dp"
                    android:layout_height="13dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_text_type"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="新赠品" />

            <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="145dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:text="hugo boss雨果波斯单色徽标毛衣" />

            <TextView
                    android:id="@+id/txt_desc1"
                    android:layout_width="43dp"
                    android:layout_height="15dp"
                    android:textColor="@color/color_text_desc"
                    android:background="@drawable/shape_desc_bg"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="当季新品" />

            <TextView
                    android:id="@+id/txt_desc2"
                    android:layout_width="43dp"
                    android:layout_height="15dp"
                    android:layout_toEndOf="@id/txt_desc1"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/color_text_desc"
                    android:background="@drawable/shape_desc_bg"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="常规版型" />

            <TextView
                    android:id="@+id/txt_desc3"
                    android:layout_width="43dp"
                    android:layout_height="15dp"
                    android:layout_toEndOf="@id/txt_desc2"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/color_text_desc"
                    android:background="@drawable/shape_desc_bg"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="上心22天" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>