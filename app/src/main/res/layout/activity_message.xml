<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_play_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:outlineSpotShadowColor="#44000000"
            android:outlineAmbientShadowColor="#44000000"
            android:background="@color/color_bg_home"
            android:elevation="15dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_play_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_play_top"
                android:background="@null"
                android:src="@mipmap/img_topview_back" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_play_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ibn_play_back"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/clayout_play_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_play_top"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:text="消息"
                android:textColor="@color/color_history_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_message_relation"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="@id/clayout_play_top">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_message_relation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_message_relation"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_message_relation"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_message_relation"
                    app:layout_constraintRight_toRightOf="@id/clayout_message_relation"
                    android:src="@mipmap/img_message_top_relation" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/color_bg_friend_divider"
            android:outlineSpotShadowColor="@color/color_music_divider_shadow"
            android:outlineAmbientShadowColor="@color/color_music_divider_shadow"
            android:elevation="2dp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/img_load_result_empty"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal" />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="没有任何消息~"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:textColor="@color/color_landscape_item_author" />
</androidx.appcompat.widget.LinearLayoutCompat>