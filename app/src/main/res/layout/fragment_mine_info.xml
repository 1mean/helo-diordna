<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_recommend"
        android:clickable="true">
    <!--bug:防止能点击到底下activity的控件-->

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_update_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_bg_pink"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="55dp"
            android:layout_marginStart="12dp"
            android:hint="请输入新昵称"
            android:textColorHint="@color/color_comment_item_name"
            android:textColor="@color/color_txt_title_item_panda"
            android:textCursorDrawable="@drawable/shape_edit_comment"
            android:textSize="14sp"
            android:ellipsize="start"
            android:layout_marginTop="20dp"
            android:singleLine="true" />

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_delete_name_input"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:layout_marginEnd="5dp"
            android:src="@mipmap/img_video_list_delete" />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/edit_update_name"
            app:layout_constraintTop_toBottomOf="@id/edit_update_name"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/color_video_item_name"
            android:text="修改昵称需要消耗6个积分" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_name_sure"
            android:layout_width="80dp"
            android:layout_height="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_update_name"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/shape_name_sure"
            android:textColor="@color/color_txt_mylove_self"
            android:textSize="14sp"
            android:text="@string/str_sure" />

</androidx.constraintlayout.widget.ConstraintLayout>
