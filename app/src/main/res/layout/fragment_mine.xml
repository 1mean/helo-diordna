<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="32.66dp"
            android:background="@color/color_white_lucency" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_mine_top"
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_update_bg"
                android:layout_width="42dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/layout_mine_top"
                app:layout_constraintBottom_toBottomOf="@id/layout_mine_top"
                app:layout_constraintRight_toRightOf="@id/layout_mine_top">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/item_update_bg"
                    app:layout_constraintBottom_toBottomOf="@id/item_update_bg"
                    app:layout_constraintRight_toRightOf="@id/item_update_bg"
                    app:layout_constraintLeft_toLeftOf="@id/item_update_bg"
                    android:src="@mipmap/img_mine_dark" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_character"
                android:layout_width="42dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/layout_mine_top"
                app:layout_constraintBottom_toBottomOf="@id/layout_mine_top"
                app:layout_constraintRight_toLeftOf="@id/item_update_bg">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/item_character"
                    app:layout_constraintBottom_toBottomOf="@id/item_character"
                    app:layout_constraintRight_toRightOf="@id/item_character"
                    app:layout_constraintLeft_toLeftOf="@id/item_character"
                    android:src="@mipmap/img_clothes" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_mine_scan"
                android:layout_width="42dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/layout_mine_top"
                app:layout_constraintBottom_toBottomOf="@id/layout_mine_top"
                app:layout_constraintRight_toLeftOf="@id/item_character">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/item_mine_scan"
                    app:layout_constraintBottom_toBottomOf="@id/item_mine_scan"
                    app:layout_constraintRight_toRightOf="@id/item_mine_scan"
                    app:layout_constraintLeft_toLeftOf="@id/item_mine_scan"
                    android:src="@mipmap/img_mine_scan" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_header"
            android:layout_width="match_parent"
            android:layout_height="90dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_mine_header"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="@id/view_header"
                app:layout_constraintBottom_toBottomOf="@id/view_header"
                app:layout_constraintLeft_toLeftOf="@id/view_header"
                android:layout_marginStart="17dp" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/img_mine_header"
                app:layout_constraintLeft_toRightOf="@id/img_mine_header"
                android:layout_marginStart="18dp"
                android:textSize="16sp"
                android:textColor="@color/color_mine_txt_name"
                android:text="和叶小可怜" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_mine_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/txt_mine_name"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@id/txt_mine_name"
                android:layout_marginTop="6dp"
                android:src="@mipmap/img_mine_male" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_mine_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/img_mine_sex"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/txt_mine_name"
                android:layout_marginTop="1dp"
                android:src="@mipmap/img_level8" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llayout_mine_zone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_mine_zone_counts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_mine_txt_zone_counts"
                    android:text="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_mine_txt_zone"
                    android:textSize="12sp"
                    android:text="@string/str_zone"
                    android:layout_gravity="center_horizontal" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_mine_follow_counts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_mine_txt_zone_counts"
                    android:text="12"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_mine_txt_zone"
                    android:textSize="12sp"
                    android:text="@string/str_follow"
                    android:layout_gravity="center_horizontal" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_mine_fans_counts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_mine_txt_zone_counts"
                    android:text="5555"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_mine_txt_zone"
                    android:textSize="12sp"
                    android:text="@string/str_fans"
                    android:layout_gravity="center_horizontal" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_download"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_download"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_download"
                    app:layout_constraintRight_toRightOf="@id/clayout_download"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/img_mine_download" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_mine_download"
                    android:textSize="12sp"
                    android:textColor="@color/color_mine_txt_download"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_download"
                    app:layout_constraintRight_toRightOf="@id/clayout_download"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_download"
                    android:layout_marginTop="5dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_history"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_history"
                    app:layout_constraintRight_toRightOf="@id/clayout_history"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/img_mine_history" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_mine_history"
                    android:textSize="12sp"
                    android:textColor="@color/color_mine_txt_download"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_history"
                    app:layout_constraintRight_toRightOf="@id/clayout_history"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_history"
                    android:layout_marginTop="5dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_collect"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_collect"
                    app:layout_constraintRight_toRightOf="@id/clayout_collect"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/img_mine_collect" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_mine_collect"
                    android:textSize="12sp"
                    android:textColor="@color/color_mine_txt_download"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_collect"
                    app:layout_constraintRight_toRightOf="@id/clayout_collect"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_collect"
                    android:layout_marginTop="5dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_later"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_later"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_later"
                    app:layout_constraintRight_toRightOf="@id/clayout_later"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/img_mine_download" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_mine_download"
                    android:textSize="12sp"
                    android:textColor="@color/color_mine_txt_download"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_later"
                    app:layout_constraintRight_toRightOf="@id/clayout_later"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_later"
                    android:layout_marginTop="5dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>