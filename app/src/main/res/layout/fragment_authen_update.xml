<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_authen_update_info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="13sp"
            android:textColor="@color/color_music_setting_notice"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="5dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_authen_update_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="12sp"
            android:textColor="@color/color_loging_desc_txt"
            app:layout_constraintTop_toBottomOf="@id/txt_authen_update_info1"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="5dp"
            tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_authentication_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_authen_update_info2"
            android:layout_marginTop="33dp"
            android:textColor="@color/color_music_setting_notice"
            app:layout_constraintLeft_toLeftOf="@id/txt_authen_update_info2" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_authentication_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/txt_authentication_name"
            android:layout_marginTop="12dp"
            android:paddingStart="8dp"
            android:hint="请输入真实姓名"
            android:textColorHint="#cccccc"
            android:textSize="15sp"
            android:textColor="@color/black_33"
            android:gravity="left|center_vertical"
            android:background="@drawable/shape_name_bg_authentication" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_authentication_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/edit_authentication_name"
            android:layout_marginTop="24dp"
            android:textColor="@color/color_music_setting_notice"
            app:layout_constraintLeft_toLeftOf="@id/txt_authentication_name" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_authentication_card"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/txt_authentication_card"
            android:layout_marginTop="12dp"
            android:paddingStart="8dp"
            android:gravity="left|center_vertical"
            android:hint="请输入本人真实身份证号码"
            android:textColorHint="#cccccc"
            android:textSize="15sp"
            android:textColor="@color/black_33"
            android:maxLength="18"
            android:background="@drawable/shape_name_bg_authentication"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_authen_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="210dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_bg_auth_update" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_authen_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/txt_authen_submit"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_loging_desc_txt"
            android:lineSpacingExtra="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_authen_human"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="40dp"
            android:textColor="@color/black_33" />

</androidx.constraintlayout.widget.ConstraintLayout>