<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_setting"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_setting_top"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/color_bg_home">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_setting_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_setting_top"
                android:background="@null"
                android:src="@mipmap/img_setting_top_back_black33" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_setting_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_setting_top"
                app:layout_constraintLeft_toLeftOf="@id/clayout_setting_top"
                app:layout_constraintRight_toRightOf="@id/clayout_setting_top"
                android:includeFontPadding="false"
                android:textSize="17sp"
                android:text="个性设置"
                android:textColor="@color/color_history_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="个性设置"
            android:textColor="#939a9f"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:background="@color/color_bg_edit_video_comment" />

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/clayout_bg_select"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="单色主题"
                android:textColor="@color/color_txt_title_item_panda"
                android:layout_marginTop="15dp"
                android:layout_marginStart="12dp" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="false" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>