<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:clickable="true"
        android:focusable="true"
        tools:viewBindingIgnore="true"
        android:background="@drawable/ripple_landscape_item">

    <androidx.cardview.widget.CardView
            android:id="@+id/flayout_one_cover"
            android:layout_width="144dp"
            android:layout_height="90dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_video_list_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_video_list_duration"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="6dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@drawable/shape_video_item_duration"
                tools:ignore="SmallSp" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_title"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/flayout_one_cover"
            app:layout_constraintLeft_toRightOf="@id/flayout_one_cover"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_video_item_title"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_author"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_video_list_title"
            app:layout_constraintBottom_toBottomOf="@id/flayout_one_cover"
            android:layout_marginBottom="18dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_video"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_video_list_author"
            app:layout_constraintBottom_toBottomOf="@id/flayout_one_cover"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_video_list_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/txt_video_list_video"
            app:layout_constraintBottom_toBottomOf="@id/txt_video_list_video"
            android:layout_marginStart="8dp"
            android:textColor="@color/color_landscape_item_author"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:background="@color/color_divider_one_vertical2"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>