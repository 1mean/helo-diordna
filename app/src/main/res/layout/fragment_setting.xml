<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_self"
        android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="32.66dp"
            android:background="@color/color_white_lucency" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_mine_top"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_mode_dark"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="@id/layout_mine_top"
                app:layout_constraintRight_toRightOf="@id/layout_mine_top">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_update_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/item_mode_dark"
                    app:layout_constraintBottom_toBottomOf="@id/item_mode_dark"
                    app:layout_constraintRight_toRightOf="@id/item_mode_dark"
                    app:layout_constraintLeft_toLeftOf="@id/item_mode_dark"
                    android:src="@mipmap/img_mine_dark_gray" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_character"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="@id/layout_mine_top"
                app:layout_constraintRight_toLeftOf="@id/item_mode_dark">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_update_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/item_character"
                    app:layout_constraintBottom_toBottomOf="@id/item_character"
                    app:layout_constraintRight_toRightOf="@id/item_character"
                    app:layout_constraintLeft_toLeftOf="@id/item_character"
                    android:src="@mipmap/img_clothes_gray" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_mine_scan"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_self_bg_scan"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/layout_mine_top"
                app:layout_constraintRight_toLeftOf="@id/item_character">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/item_mine_scan"
                    app:layout_constraintBottom_toBottomOf="@id/item_mine_scan"
                    app:layout_constraintRight_toRightOf="@id/item_mine_scan"
                    app:layout_constraintLeft_toLeftOf="@id/item_mine_scan"
                    android:src="@mipmap/img_mine_scan_gray" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_top_info"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_top_header"
                app:layout_constraintTop_toTopOf="@id/clayout_top_info"
                app:layout_constraintLeft_toLeftOf="@id/clayout_top_info"
                android:layout_width="110dp"
                android:layout_height="110dp">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_mine_header"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="@id/clayout_top_header"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_top_header"
                    app:layout_constraintRight_toRightOf="@id/clayout_top_header"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_top_header"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_top_info"
                app:layout_constraintLeft_toRightOf="@id/clayout_top_header"
                android:layout_marginTop="31dp"
                android:layout_marginStart="4dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/color_txt_mine_name"
                android:text="和叶小可怜" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_mine_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txt_mine_name"
                app:layout_constraintTop_toBottomOf="@id/txt_mine_name"
                android:layout_marginTop="12dp"
                android:src="@mipmap/img_mine_male" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_mine_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/txt_mine_name"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@id/txt_mine_name"
                android:visibility="gone"
                android:src="@mipmap/img_level8" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硬币：20"
                android:textSize="11sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/color_txt_tab"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                app:layout_constraintTop_toTopOf="@id/img_mine_sex"
                app:layout_constraintLeft_toRightOf="@id/img_mine_sex" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_self"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                app:layout_constraintTop_toBottomOf="@id/txt_coins"
                app:layout_constraintRight_toRightOf="@id/clayout_top_info"
                android:layout_marginEnd="15dp">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_self_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_self"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_self"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_self"
                    android:layout_marginStart="12dp"
                    android:text="@string/str_mine_zone"
                    android:includeFontPadding="false"
                    android:textSize="11sp"
                    android:textColor="@color/color_txt_tab" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_zone_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_self"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_self"
                    app:layout_constraintLeft_toRightOf="@id/txt_self_zone"
                    android:layout_marginStart="5dp"
                    android:src="@mipmap/img_setting_top_arror" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="@id/clayout_top_info"
                android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_mine_zone"
                    style="@style/style_mine_top_clayout">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_mine_zone"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_mine_zone"
                        app:layout_constraintRight_toRightOf="@id/clayout_mine_zone"
                        app:layout_constraintTop_toTopOf="@id/clayout_mine_zone"
                        android:text="0"
                        style="@style/style_mine_top_text" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_zone"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_mine_zone"
                        app:layout_constraintRight_toRightOf="@id/clayout_mine_zone"
                        app:layout_constraintTop_toBottomOf="@id/txt_mine_zone"
                        style="@style/style_mine_top_text_name"
                        android:text="@string/str_zone" />

                <View
                        style="@style/style_mine_top_drivider"
                        app:layout_constraintTop_toTopOf="@id/clayout_mine_zone"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_mine_zone"
                        app:layout_constraintRight_toRightOf="@id/clayout_mine_zone" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_mine_follow"
                    style="@style/style_mine_top_clayout">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_mine_follow"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_mine_follow"
                        app:layout_constraintRight_toRightOf="@id/clayout_mine_follow"
                        app:layout_constraintTop_toTopOf="@id/clayout_mine_follow"
                        style="@style/style_mine_top_text" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_attention"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_mine_follow"
                        app:layout_constraintRight_toRightOf="@id/clayout_mine_follow"
                        app:layout_constraintTop_toBottomOf="@id/txt_mine_follow"
                        style="@style/style_mine_top_text_name"
                        android:text="@string/str_follow" />

                <View
                        style="@style/style_mine_top_drivider"
                        app:layout_constraintTop_toTopOf="@id/clayout_mine_follow"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_mine_follow"
                        app:layout_constraintRight_toRightOf="@id/clayout_mine_follow" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_mine_fans"
                    style="@style/style_mine_top_clayout">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_mine_fans"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_mine_fans"
                        app:layout_constraintRight_toRightOf="@id/clayout_mine_fans"
                        app:layout_constraintTop_toTopOf="@id/clayout_mine_fans"
                        android:text="0"
                        style="@style/style_mine_top_text" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_fan"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_mine_fans"
                        app:layout_constraintRight_toRightOf="@id/clayout_mine_fans"
                        app:layout_constraintTop_toBottomOf="@id/txt_mine_fans"
                        style="@style/style_mine_top_text_name"
                        android:text="@string/str_fans" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:cardBackgroundColor="@color/color_bg_cardview_self"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clayout_download"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/clayout_download"
                                app:layout_constraintLeft_toLeftOf="@id/clayout_download"
                                app:layout_constraintRight_toRightOf="@id/clayout_download"
                                android:src="@mipmap/img_self_down_new" />

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_mine_download"
                                android:textSize="12sp"
                                android:textColor="@color/color_txt_download_self"
                                app:layout_constraintLeft_toLeftOf="@id/clayout_download"
                                app:layout_constraintRight_toRightOf="@id/clayout_download"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_download"
                                android:layout_marginTop="5dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clayout_history"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/clayout_history"
                                app:layout_constraintLeft_toLeftOf="@id/clayout_history"
                                app:layout_constraintRight_toRightOf="@id/clayout_history"
                                android:src="@mipmap/img_self_history_new" />

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_mine_history"
                                android:textSize="12sp"
                                android:textColor="@color/color_txt_download_self"
                                app:layout_constraintLeft_toLeftOf="@id/clayout_history"
                                app:layout_constraintRight_toRightOf="@id/clayout_history"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_history"
                                android:layout_marginTop="5dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clayout_collect"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/clayout_collect"
                                app:layout_constraintLeft_toLeftOf="@id/clayout_collect"
                                app:layout_constraintRight_toRightOf="@id/clayout_collect"
                                android:src="@mipmap/img_self_collect_new" />

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_mine_collect"
                                android:textSize="12sp"
                                android:textColor="@color/color_txt_download_self"
                                app:layout_constraintLeft_toLeftOf="@id/clayout_collect"
                                app:layout_constraintRight_toRightOf="@id/clayout_collect"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_collect"
                                android:layout_marginTop="5dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clayout_later"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/clayout_later"
                                app:layout_constraintLeft_toLeftOf="@id/clayout_later"
                                app:layout_constraintRight_toRightOf="@id/clayout_later"
                                android:src="@mipmap/img_self_later_new" />

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_mine_later"
                                android:textSize="12sp"
                                android:textColor="@color/color_txt_download_self"
                                app:layout_constraintLeft_toLeftOf="@id/clayout_later"
                                app:layout_constraintRight_toRightOf="@id/clayout_later"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_later"
                                android:layout_marginTop="5dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/color_bg_cardview_self"
                    android:layout_marginTop="15dp">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的服务"
                        android:textColor="@color/color_txt_morefunc_self"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="12dp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/clayout_setting_love"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="50dp"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llayout_mine_love"
                            style="@style/style_user_top_info">

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/img_self_love_new"
                                android:layout_gravity="center_horizontal"
                                app:layout_constraintTop_toTopOf="@id/llayout_mine_love"
                                app:layout_constraintRight_toRightOf="@id/llayout_mine_love"
                                app:layout_constraintLeft_toLeftOf="@id/llayout_mine_love" />

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="@id/llayout_mine_love"
                                app:layout_constraintRight_toRightOf="@id/llayout_mine_love"
                                app:layout_constraintBottom_toBottomOf="@id/llayout_mine_love"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/color_txt_download_self"
                                android:text="我喜欢" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llayout_mine_exp"
                            style="@style/style_user_top_info">

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/img_left_exp_new"
                                android:layout_gravity="center_horizontal"
                                app:layout_constraintTop_toTopOf="@id/llayout_mine_exp"
                                app:layout_constraintRight_toRightOf="@id/llayout_mine_exp"
                                app:layout_constraintLeft_toLeftOf="@id/llayout_mine_exp" />

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="@id/llayout_mine_exp"
                                app:layout_constraintRight_toRightOf="@id/llayout_mine_exp"
                                app:layout_constraintBottom_toBottomOf="@id/llayout_mine_exp"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/color_txt_download_self"
                                android:text="我的积分" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat style="@style/style_user_top_info" />

                    <androidx.appcompat.widget.LinearLayoutCompat style="@style/style_user_top_info" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/color_bg_cardview_self">

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多服务"
                            android:textColor="@color/color_txt_morefunc_self"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="18dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clayout_setting"
                            android:layout_marginTop="10dp"
                            style="@style/style_self_setting_item">

                        <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_left_setting"
                                app:layout_constraintTop_toTopOf="@id/clayout_setting"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_setting"
                                app:layout_constraintLeft_toLeftOf="@id/clayout_setting"
                                style="@style/style_self_setting_left_image"
                                android:src="@mipmap/img_left_setting_new" />

                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/style_self_setting_name"
                                app:layout_constraintTop_toTopOf="@id/clayout_setting"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_setting"
                                app:layout_constraintLeft_toRightOf="@id/img_left_setting"
                                android:text="@string/str_setting" />

                        <!--<androidx.appcompat.widget.AppCompatTextView
                                style="@style/style_self_setting_desc"
                                app:layout_constraintTop_toTopOf="@id/clayout_setting"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_setting"
                                app:layout_constraintRight_toRightOf="@id/clayout_setting"
                                android:text="@string/str_setting_info" />-->

                        <androidx.appcompat.widget.AppCompatImageView
                                style="@style/style_self_setting_arrow"
                                app:layout_constraintTop_toTopOf="@id/clayout_setting"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_setting"
                                app:layout_constraintRight_toRightOf="@id/clayout_setting" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clayout_setting_timing"
                            style="@style/style_self_setting_item">

                        <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_left_timing"
                                app:layout_constraintTop_toTopOf="@id/clayout_setting_timing"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_setting_timing"
                                app:layout_constraintLeft_toLeftOf="@id/clayout_setting_timing"
                                style="@style/style_self_setting_left_image"
                                android:src="@mipmap/img_left_timing_new" />

                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/style_self_setting_name"
                                app:layout_constraintTop_toTopOf="@id/clayout_setting_timing"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_setting_timing"
                                app:layout_constraintLeft_toRightOf="@id/img_left_timing"
                                android:text="@string/str_setting_timing" />

                        <!--<androidx.appcompat.widget.AppCompatTextView
                                style="@style/style_self_setting_desc"
                                app:layout_constraintTop_toTopOf="@id/clayout_setting_timing"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_setting_timing"
                                app:layout_constraintRight_toRightOf="@id/clayout_setting_timing"
                                android:text="@string/str_setting_more_info" />-->

                        <androidx.appcompat.widget.AppCompatImageView
                                style="@style/style_self_setting_arrow"
                                app:layout_constraintTop_toTopOf="@id/clayout_setting_timing"
                                app:layout_constraintBottom_toBottomOf="@id/clayout_setting_timing"
