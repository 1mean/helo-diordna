<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_music_item">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_add"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_music_item_add"
                android:background="@drawable/shape_music_add"
                app:layout_constraintLeft_toLeftOf="@id/layout_add"
                app:layout_constraintTop_toTopOf="@id/layout_add"
                app:layout_constraintBottom_toBottomOf="@id/layout_add"
                app:layout_constraintRight_toRightOf="@id/layout_add" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_cover_music"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@id/layout_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_music_item_name"
            android:layout_width="170dp"
            android:layout_height="42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_cover_music"
            android:layout_marginStart="11dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_audio_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_music_item_name"
                app:layout_constraintLeft_toLeftOf="@id/clayout_music_item_name"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color_txt_mylove_self" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_singer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/clayout_music_item_name"
                app:layout_constraintBottom_toBottomOf="@id/clayout_music_item_name"
                android:layout_marginBottom="2dp"
                android:textSize="11sp"
                android:textColor="@color/color_txt_singer" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_music_item_like"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toLeftOf="@id/clayout_music_item_more">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_music_item_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_music_item_like"
                app:layout_constraintBottom_toBottomOf="@id/clayout_music_item_like"
                app:layout_constraintLeft_toLeftOf="@id/clayout_music_item_like"
                app:layout_constraintRight_toRightOf="@id/clayout_music_item_like"
                android:src="@mipmap/img_music_item_like1" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_music_item_more"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="@id/clayout_music_item_more"
                app:layout_constraintBottom_toBottomOf="@id/clayout_music_item_more"
                app:layout_constraintLeft_toLeftOf="@id/clayout_music_item_more"
                app:layout_constraintRight_toRightOf="@id/clayout_music_item_more"
                android:src="@drawable/selector_music_item_more"
                android:focusable="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>