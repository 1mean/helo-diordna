<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="72.66dp"
            android:background="@color/color_white_lucency" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swip_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <com.example.pandas.ui.view.recyclerview.SwipRecyclerView
                    android:id="@+id/recycler_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

            <include
                    android:id="@+id/layout_error"
                    layout="@layout/layout_error" />

            <include
                    android:id="@+id/layout_empty"
                    layout="@layout/layout_empty" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_attention_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_login_null"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_attention_login"
                        app:layout_constraintRight_toRightOf="@id/clayout_attention_login"
                        app:layout_constraintTop_toTopOf="@id/clayout_attention_login"
                        android:layout_marginTop="100dp" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_attention_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您还未登录"
                        android:textSize="16sp"
                        android:textColor="@color/black_33"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_attention_login"
                        app:layout_constraintRight_toRightOf="@id/clayout_attention_login"
                        app:layout_constraintTop_toTopOf="@id/clayout_attention_login"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_attention_login"
                        app:layout_constraintVertical_bias="0.57" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录账号，查看你关注的精彩内容"
                        android:textSize="14sp"
                        android:textColor="@color/color_txt_friend_tablayout"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_attention_login"
                        app:layout_constraintRight_toRightOf="@id/clayout_attention_login"
                        app:layout_constraintTop_toBottomOf="@id/txt_attention_login"
                        android:layout_marginTop="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_login"
                        android:layout_width="196dp"
                        android:layout_height="44dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_attention_login"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_attention_login"
                        app:layout_constraintRight_toRightOf="@id/clayout_attention_login"
                        android:layout_marginTop="80dp"
                        android:text="登录"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:includeFontPadding="false"
                        android:gravity="center"
                        android:background="@drawable/shape_bg_login1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.appcompat.widget.LinearLayoutCompat>