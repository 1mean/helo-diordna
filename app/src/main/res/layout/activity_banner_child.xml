<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_history_top"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_history_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_history_top"
                android:background="@null"
                android:src="@mipmap/img_top_leave" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ibn_history_back"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/clayout_history_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_history_top"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:text="@string/str_history"
                android:textColor="@color/color_history_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_top_search"
                android:layout_width="56dp"
                app:layout_constraintRight_toRightOf="@id/clayout_history_top"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_top_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/clayout_top_search"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_top_search"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_top_search"
                    app:layout_constraintRight_toRightOf="@id/clayout_top_search"
                    android:src="@mipmap/img_topview_search" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/color_bg_divider_home"
            android:outlineSpotShadowColor="@color/color_music_divider_shadow"
            android:outlineAmbientShadowColor="@color/color_music_divider_shadow"
            android:elevation="5dp" />

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_banner_list"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:tabMaxWidth="0dp"
            app:tabRippleColor="@android:color/transparent"
            android:background="@color/color_bg_home"
            app:tabTextColor="@color/color_tablayout_unselect_panda"
            app:tabIndicatorColor="@color/color_bg_green"
            app:tabSelectedTextColor="@color/color_bg_green"
            app:tabTextAppearance="@style/BannerTabLayoutTextStyle"
            app:tabIndicator="@drawable/layer_tablayout"
            android:paddingBottom="5dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2_banner_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</androidx.appcompat.widget.LinearLayoutCompat>