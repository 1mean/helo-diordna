<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_home"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_history_top"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_history_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_history_top"
                android:background="@null"
                android:src="@mipmap/img_top_leave" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ibn_history_back"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/clayout_history_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_history_top"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:text="@string/str_history"
                android:textColor="@color/color_history_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:background="@color/color_bg_divider_home" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swip_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <com.example.pandas.ui.view.recyclerview.SwipRecyclerView
                    android:id="@+id/recycler_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:visibility="gone" />

            <include
                    android:id="@+id/layout_error"
                    layout="@layout/layout_error" />

            <include
                    android:id="@+id/layout_empty"
                    layout="@layout/layout_empty" />
        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.appcompat.widget.LinearLayoutCompat>