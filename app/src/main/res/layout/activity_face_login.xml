<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_creator_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_face_login_top"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="56dp">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibn_face_login_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/clayout_face_login_top"
                android:background="@null"
                android:src="@mipmap/img_top_back" />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ibn_face_login_back"
                app:layout_constraintTop_toTopOf="@id/clayout_face_login_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_face_login_top"
                android:includeFontPadding="false"
                android:text="@string/str_face_add"
                android:textSize="16sp"
                android:textColor="@color/color_history_title" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_face_login_finish"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@id/clayout_face_login_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_face_login_top"
                app:layout_constraintRight_toRightOf="@id/clayout_face_login_top"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/color_history_manager"
                android:text="@string/str_finish" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:background="#E2E6E5" />

    <net.csdn.roundview.CircleImageView
            android:id="@+id/img_face_login"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_face_add"
            android:layout_marginTop="50dp" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_face_login_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:text="拍摄" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_face_login_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:text="从相册选择" />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_face_Login_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:background="@color/color_creator_item_bg">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_face_Login_name"
                app:layout_constraintBottom_toBottomOf="@id/clayout_face_Login_name"
                app:layout_constraintLeft_toLeftOf="@id/clayout_face_Login_name"
                android:layout_marginStart="12dp"
                android:text="@string/str_username"
                android:textSize="14sp"
                android:drawableStart="@mipmap/img_need_input"
                android:textColor="@color/color_talk_name" />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_face_login_name"
                android:layout_width="248dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="@id/clayout_face_Login_name"
                android:layout_marginEnd="12dp"
                android:hint="@string/str_name_input"
                android:textColorHint="@color/color_craetor_text"
                android:textCursorDrawable="@drawable/shape_edit_comment"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@null"
                android:textSize="14sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_face_login_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:background="@color/color_creator_item_bg">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_face_login_phone"
                app:layout_constraintLeft_toLeftOf="@id/clayout_face_login_phone"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/str_phone_no"
                android:textSize="14sp"
                android:textColor="@color/color_talk_name" />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_face_login_phone"
                android:layout_width="248dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="@id/clayout_face_login_phone"
                android:layout_marginEnd="12dp"
                android:hint="@string/str_phone_input"
                android:textColorHint="@color/color_craetor_text"
                android:textCursorDrawable="@drawable/shape_edit_comment"
                android:maxLines="1"
                android:background="@null"
                android:inputType="phone|number"
                android:digits="1234567890"
                android:maxLength="11"
                android:textSize="14sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>