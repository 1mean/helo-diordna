<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimary"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clayout_footer_mesage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="20dp"
            android:layout_height="0.3dp"
            android:layout_marginEnd="10dp"
            android:background="@color/color_bg_footer_divider"
            app:layout_constraintBottom_toBottomOf="@id/clayout_footer_mesage"
            app:layout_constraintRight_toLeftOf="@id/txt_footer"
            app:layout_constraintTop_toTopOf="@id/clayout_footer_mesage" />

        <View
            android:layout_width="20dp"
            android:layout_height="0.3dp"
            android:layout_marginStart="10dp"
            android:background="@color/color_bg_footer_divider"
            app:layout_constraintBottom_toBottomOf="@id/clayout_footer_mesage"
            app:layout_constraintLeft_toRightOf="@id/txt_footer"
            app:layout_constraintTop_toTopOf="@id/clayout_footer_mesage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:letterSpacing="0.05"
            android:textColor="@color/color_txt_footer_message"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/clayout_footer_mesage"
            app:layout_constraintLeft_toLeftOf="@id/clayout_footer_mesage"
            app:layout_constraintRight_toRightOf="@id/clayout_footer_mesage"
            app:layout_constraintTop_toTopOf="@id/clayout_footer_mesage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:indeterminateTint="@color/color_progress_loadmore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>