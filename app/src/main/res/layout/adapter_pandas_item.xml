<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="168dp"
        android:layout_height="145dp"
        app:cardCornerRadius="4dp"
        android:focusable="true"
        android:clickable="true"
        android:background="@color/white"
        app:cardElevation="0dp"
        android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_cover"
                android:layout_width="0dp"
                android:layout_height="95dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_duration"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/img_cover"
                app:layout_constraintRight_toRightOf="@id/img_cover"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:background="@drawable/shape_video_item_duration"
                tools:ignore="SmallSp" />


        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_cover"
                android:layout_marginTop="7dp"
                android:layout_marginStart="9dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxEms="10"
                android:textColor="@color/color_video_item_title"
                android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txt_title"
                app:layout_constraintTop_toBottomOf="@id/txt_title"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_card_name"
                android:textSize="11sp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clayout_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_item_delete"
                    app:layout_constraintTop_toTopOf="@id/clayout_delete"
                    app:layout_constraintBottom_toBottomOf="@id/clayout_delete"
                    app:layout_constraintLeft_toLeftOf="@id/clayout_delete"
                    app:layout_constraintRight_toRightOf="@id/clayout_delete" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>