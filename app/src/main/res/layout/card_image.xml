<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_love"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/liuyifei" />

    <com.kproduce.roundcorners.RoundRelativeLayout
            android:id="@+id/layout_music"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rBottomLeftRadius="30dp"
            android:layout_marginStart="209dp"
            android:background="@color/color_bg_card1">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/pglh"
                android:text="私人音乐"
                android:maxLines="2"
                android:maxEms="2"
                android:textSize="20sp"
                android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="MUSIC"
                android:textSize="8sp"
                android:layout_alignStart="@id/txt_music_title"
                android:layout_below="@id/txt_music_title"
                android:textColor="#37A7B2"
                tools:ignore="SmallSp" />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/txt_music_name"
                android:layout_below="@id/txt_music_name"
                android:layout_marginTop="6dp"
                android:src="@mipmap/img_music_right"
                />
    </com.kproduce.roundcorners.RoundRelativeLayout>

    <com.kproduce.roundcorners.RoundRelativeLayout
            android:id="@+id/layout_card3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rBottomLeftRadius="30dp"
            android:layout_marginStart="274dp"
            android:background="@color/white" />


</androidx.cardview.widget.CardView>