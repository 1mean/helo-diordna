<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_love"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/liuyifei" />

    <com.kproduce.roundcorners.RoundRelativeLayout
            android:id="@+id/layout_card2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rBottomLeftRadius="30dp"
            android:layout_marginStart="209dp"
            android:background="@color/color_bg_card1" />

    <com.kproduce.roundcorners.RoundRelativeLayout
            android:id="@+id/layout_card3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rBottomLeftRadius="30dp"
            android:layout_marginStart="274dp"
            android:background="@color/white" />


</androidx.cardview.widget.CardView>