<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_bg_recommend">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_info_top"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/color_bg_home">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_self_back"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:src="@mipmap/img_top_leave"
                app:layout_constraintTop_toTopOf="@id/clayout_info_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_info_top"
                app:layout_constraintLeft_toLeftOf="@id/clayout_info_top"
                android:background="@null" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_self_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_info_top"
                app:layout_constraintBottom_toBottomOf="@id/clayout_info_top"
                app:layout_constraintLeft_toRightOf="@id/btn_self_back"
                android:text="@string/str_txt_mine_info"
                android:textColor="@color/color_txt_mylove_self"
                android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_mine_top_save"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="@id/clayout_info_top"
                android:text="@string/str_save"
                android:textColor="@color/color_txt_mylove_self"
                android:textSize="15sp"
                android:gravity="center"
                android:visibility="gone" />

        <View
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                app:layout_constraintBottom_toBottomOf="@id/clayout_info_top"
                app:layout_constraintLeft_toLeftOf="@id/clayout_info_top"
                app:layout_constraintRight_toRightOf="@id/clayout_info_top"
                android:background="@color/color_music_start_bg"
                android:outlineSpotShadowColor="@color/color_bg_recommend"
                android:outlineAmbientShadowColor="@color/color_bg_recommend"
                android:elevation="6dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:id="@+id/flayout_mine_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <View
                    style="@style/style_user_info_drivider"
                    android:background="@color/color_bg_recommend" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_info_head"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/selector_mine_info">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_txt_mylove_self"
                        android:textSize="14sp"
                        android:text="@string/str_head"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_head"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_head"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_info_head"
                        android:layout_marginStart="15dp" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_mine_info_header"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_head"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_head"
                        app:layout_constraintRight_toRightOf="@id/clayout_info_head"
                        android:layout_marginEnd="40dp" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_self_arrow_right"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_head"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_head"
                        app:layout_constraintRight_toRightOf="@id/clayout_info_head"
                        android:layout_marginEnd="12dp" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.66dp"
                        android:background="@color/color_bg_divider_userinfo"
                        android:layout_marginStart="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_head" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_info_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/selector_mine_info">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_txt_mylove_self"
                        android:textSize="14sp"
                        android:text="@string/str_name"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_name"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_name"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_info_name"
                        android:layout_marginStart="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_mine_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_name"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_name"
                        app:layout_constraintRight_toRightOf="@id/clayout_info_name"
                        android:textColor="@color/color_text_setting_info"
                        android:textSize="14sp"
                        android:includeFontPadding="false"
                        android:layout_marginEnd="36dp" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_self_arrow_right"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_name"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_name"
                        app:layout_constraintRight_toRightOf="@id/clayout_info_name"
                        android:layout_marginEnd="12dp" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.66dp"
                        android:background="@color/color_bg_divider_userinfo"
                        android:layout_marginStart="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_name" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_info_sex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/selector_mine_info">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_txt_mylove_self"
                        android:textSize="14sp"
                        android:text="@string/str_sex"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_sex"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_sex"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_info_sex"
                        android:layout_marginStart="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_mine_info_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_sex"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_sex"
                        app:layout_constraintRight_toRightOf="@id/clayout_info_sex"
                        android:textColor="@color/color_text_setting_info"
                        android:textSize="14sp"
                        android:includeFontPadding="false"
                        android:layout_marginEnd="36dp" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_self_arrow_right"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_sex"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_sex"
                        app:layout_constraintRight_toRightOf="@id/clayout_info_sex"
                        android:layout_marginEnd="12dp" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.66dp"
                        android:background="@color/color_bg_divider_userinfo"
                        android:layout_marginStart="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_sex" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_info_sign"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/selector_mine_info">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_txt_mylove_self"
                        android:textSize="14sp"
                        android:text="@string/str_sign"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_sign"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_sign"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_info_sign"
                        android:layout_marginStart="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_mine_info_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_sign"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_sign"
                        app:layout_constraintRight_toRightOf="@id/clayout_info_sign"
                        android:textColor="@color/color_text_setting_info"
                        android:textSize="14sp"
                        android:text="这个人很神秘，什么都没有写"
                        android:includeFontPadding="false"
                        android:layout_marginEnd="36dp" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_self_arrow_right"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_sign"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_sign"
                        app:layout_constraintRight_toRightOf="@id/clayout_info_sign"
                        android:layout_marginEnd="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    style="@style/style_user_info_drivider"
                    android:background="@color/color_bg_recommend" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_info_num"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/selector_mine_info">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_txt_mylove_self"
                        android:textSize="14sp"
                        android:text="@string/str_NO"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_num"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_num"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_info_num"
                        android:layout_marginStart="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_mine_info_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/clayout_info_num"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_info_num"
                        app:layout_constraintRight_toRightOf="@id/clayout_info_num"
                        android:textColor="@color/color_text_setting_info"
                        android:textSize="14sp"
                        android:includeFontPadding="false"
                        android:layout_marginEnd="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    style="@style/style_user_info_drivider"
                    android:background="@color/color_bg_recommend" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_header_wraper"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/selector_mine_info">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_txt_mylove_self"
                        android:textSize="14sp"
                        android:text="头像挂件"
                        app:layout_constraintTop_toTopOf="@id/clayout_header_wraper"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_header_wraper"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_header_wraper"
                        android:layout_marginStart="15dp" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_self_arrow_right"
                        app:layout_constraintTop_toTopOf="@id/clayout_header_wraper"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_header_wraper"
                        app:layout_constraintRight_toRightOf="@id/clayout_header_wraper"
                        android:layout_marginEnd="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>
</androidx.appcompat.widget.LinearLayoutCompat>