<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clayout_pre_bottom"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="100dp">

        <androidx.cardview.widget.CardView
                android:id="@+id/card_pre"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardElevation="0.5dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toTopOf="@id/clayout_pre_bottom"
                app:layout_constraintBottom_toBottomOf="@id/clayout_pre_bottom"
                app:layout_constraintLeft_toLeftOf="@id/clayout_pre_bottom">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_icon_fire" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/clayout_pre_bottom"
                app:layout_constraintBottom_toBottomOf="@id/clayout_pre_bottom"
                app:layout_constraintLeft_toRightOf="@id/card_pre"
                android:layout_marginStart="15dp"
                android:text="火鸟娱乐"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pglh" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>