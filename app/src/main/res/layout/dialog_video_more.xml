<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F7F9"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/str_share"
            android:gravity="bottom"
            android:paddingStart="22dp"
            android:textSize="12sp"
            android:textColor="#484D51"
            tools:ignore="RtlSymmetry" />

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="12dp">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_video_more_weixin"
                    style="@style/style_video_more_item">

                <androidx.appcompat.widget.AppCompatImageView
                        style="@style/style_video_more_item_image"
                        app:layout_constraintTop_toTopOf="@id/clayout_video_more_weixin"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_weixin"
                        android:src="@mipmap/img_weixin"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_weixin" />

                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/style_video_more_item_text"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_video_more_weixin"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_weixin"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_weixin"
                        android:text="微信" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_video_more_wx_zone"
                    style="@style/style_video_more_item">

                <androidx.appcompat.widget.AppCompatImageView
                        style="@style/style_video_more_item_image"
                        app:layout_constraintTop_toTopOf="@id/clayout_video_more_wx_zone"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_wx_zone"
                        android:src="@mipmap/img_weixin_zone"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_wx_zone" />

                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/style_video_more_item_text"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_video_more_wx_zone"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_wx_zone"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_wx_zone"
                        android:text="朋友圈" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_video_more_qq"
                    style="@style/style_video_more_item">

                <androidx.appcompat.widget.AppCompatImageView
                        style="@style/style_video_more_item_image"
                        app:layout_constraintTop_toTopOf="@id/clayout_video_more_qq"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_qq"
                        android:src="@mipmap/img_qq"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_qq" />

                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/style_video_more_item_text"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_video_more_qq"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_qq"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_qq"
                        android:text="QQ" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_video_more_qq_zone"
                    style="@style/style_video_more_item">

                <androidx.appcompat.widget.AppCompatImageView
                        style="@style/style_video_more_item_image"
                        app:layout_constraintTop_toTopOf="@id/clayout_video_more_qq_zone"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_qq_zone"
                        android:src="@mipmap/img_qq_zone"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_qq_zone" />

                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/style_video_more_item_text"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_video_more_qq_zone"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_qq_zone"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_qq_zone"
                        android:text="QQ空间" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_video_more_zone"
                    style="@style/style_video_more_item">

                <androidx.appcompat.widget.AppCompatImageView
                        style="@style/style_video_more_item_image"
                        app:layout_constraintTop_toTopOf="@id/clayout_video_more_zone"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_zone"
                        android:src="@mipmap/img_share_zone"
                        android:background="@drawable/shape_bg_share"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_zone" />

                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/style_video_more_item_text"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_video_more_zone"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_zone"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_zone"
                        android:text="动态" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_video_more_copy"
                    style="@style/style_video_more_item">

                <androidx.appcompat.widget.AppCompatImageView
                        style="@style/style_video_more_item_image"
                        app:layout_constraintTop_toTopOf="@id/clayout_video_more_copy"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_copy"
                        android:src="@mipmap/img_copy_url"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_copy" />

                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/style_video_more_item_text"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_video_more_copy"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_copy"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_copy"
                        android:text="复制链接" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_video_more"
                    style="@style/style_video_more_item">

                <androidx.appcompat.widget.AppCompatImageView
                        style="@style/style_video_more_item_image"
                        app:layout_constraintTop_toTopOf="@id/clayout_video_more"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more"
                        android:src="@mipmap/img_share_more"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more" />

                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/style_video_more_item_text"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_video_more"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more"
                        android:text="更多" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </HorizontalScrollView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:layout_marginTop="16dp"
            android:background="#E2E6E6" />

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_video_more_later"
                    style="@style/style_video_more_item">

                <androidx.appcompat.widget.AppCompatImageView
                        style="@style/style_video_more_item_image2"
                        app:layout_constraintTop_toTopOf="@id/clayout_video_more_later"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_later"
                        android:src="@mipmap/img_video_more_later"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_later" />

                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/style_video_more_item_text"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_video_more_later"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_later"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_later"
                        android:text="稍后再看" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clayout_video_more_speed"
                    style="@style/style_video_more_item">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        app:layout_constraintTop_toTopOf="@id/clayout_video_more_speed"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_speed"
                        android:src="@mipmap/img_video_more_speed"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_speed" />

                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/style_video_more_item_text"
                        app:layout_constraintBottom_toBottomOf="@id/clayout_video_more_speed"
                        app:layout_constraintLeft_toLeftOf="@id/clayout_video_more_speed"
                        app:layout_constraintRight_toRightOf="@id/clayout_video_more_speed"
                        android:text="倍速播放" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </HorizontalScrollView>

    <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="16dp"
            android:background="#EFF3F3" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_share_close"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/str_cannel"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#444E55" />
</androidx.appcompat.widget.LinearLayoutCompat>