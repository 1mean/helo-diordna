<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 导航栏设置背景为透明色     -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--  设置最顶端状态栏为透明，页面第一个控件会顶上去填满状态栏 -->
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->

    </style>

    <!-- common gravity   -->
    <style name="styles_common_gravity">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <!-- home activity RadioButtom style -->
    <style name="styles_homepage_radiobuttom">
        <item name="android:textSize">@dimen/common_sz_10_dimens</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/activity_bottom_paddingTop_dimens</item>
        <item name="android:paddingBottom">@dimen/activity_bottom_paddingBottom_dimens</item>
        <item name="android:drawablePadding">@dimen/activity_bottom_drawablePadding_dimens</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/color_groupbutton_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!--self-tablayout-->
    <style name="SelfTabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="VideoTabLayoutTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- home activity RadioButtom style -->
    <style name="styles_txt_love_classify">
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_txt_love_pet</item>
    </style>

    <style name="styles_img_love_classify">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--cache toolbar-->
    <style name="styles_cache_toolbar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_cache_bar_title</item>
    </style>
</resources>
