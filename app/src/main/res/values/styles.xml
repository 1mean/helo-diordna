<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 导航栏设置背景为透明色     -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--  设置最顶端状态栏为透明，页面第一个控件会顶上去填满状态栏 -->
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->

        <!--给项目里的所有BottomSheetDialog设置圆角，如果不用全部圆角可屏蔽，然后在构造方法里自行设置style-->
        <!--<item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>-->
    </style>

    <!-- common gravity   -->
    <style name="styles_common_gravity">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <!-- home activity RadioButtom style -->
    <style name="styles_homepage_radiobuttom">
        <item name="android:textSize">@dimen/common_sz_10_dimens</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/activity_bottom_paddingTop_dimens</item>
        <item name="android:paddingBottom">@dimen/activity_bottom_paddingBottom_dimens</item>
        <item name="android:drawablePadding">@dimen/activity_bottom_drawablePadding_dimens</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/color_groupbutton_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!--self-tablayout-->
    <style name="SelfTabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BannerTabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PetTabLayoutTextStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="VideoTabLayoutTextStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MusicTabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UserInfoTabStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HomeTabTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- home activity RadioButtom style -->
    <style name="styles_txt_love_classify">
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_txt_love_pet</item>
    </style>

    <style name="styles_img_love_classify">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--cache toolbar-->
    <style name="styles_cache_toolbar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_cache_bar_title</item>
    </style>

    <!--message toolbar-->
    <style name="styles_toolbar_message">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_bg_item_title</item>
    </style>

    <declare-styleable name="RadiusCardView">
        <attr name="leftTopRadiu" format="dimension" />
        <attr name="leftBottomRadiu" format="dimension" />
        <attr name="rightTopRadiu" format="dimension" />
        <attr name="rightBottomRadiu" format="dimension" />
        <attr name="bgColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="BannerCardView">
        <attr name="bannerWidth" format="dimension" />
        <attr name="card2Width" format="dimension" />
        <attr name="card3Width" format="dimension" />
    </declare-styleable>

    <!-- HomeFragment ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_fragment_main_bottom_text">
        <item name="android:textSize">@dimen/common_sz_10_dimens</item>
        <item name="android:paddingBottom">@dimen/activity_bottom_paddingBottom_dimens</item>
        <item name="android:drawablePadding">@dimen/activity_bottom_drawablePadding_dimens</item>
    </style>

    <style name="style_home_dialog_text">
        <item name="android:layout_width">144dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/color_txt_dialog</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/selector_home_dialog</item>
    </style>

    <!-- UserInfoActivity ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_user_top_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_user_top_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_txt_item_title_land</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>

    <style name="style_user_top_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/color_txt_user_unattention</item>
    </style>

    <style name="style_user_dialog_relative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
    </style>

    <style name="style_user_dialog_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/grey900</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_user_dialog_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@color/color_home_divider</item>
    </style>

    <style name="style_user_dialog_divider2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/color_bg_user_divider</item>
    </style>

    <!-- SelfFragment ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_mine_top_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/color_txt_fans_self</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_mine_top_text_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/color_txt_tab</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_mine_top_drivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/color_bg_divider_self</item>
    </style>

    <style name="style_mine_top_clayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- EyepetozerFragment ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_eye_item_bottom_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_txt_live_item_share</item>
    </style>

    <style name="style_eye_item_bottom_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="style_eye_item_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- SelfFragment ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_self_setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="style_self_setting_left_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <style name="style_self_setting_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textColor">@color/color_txt_setting_self</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_self_setting_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:textColor">@color/color_text_setting_info</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_self_setting_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:src">@mipmap/img_left_arrow_right</item>
    </style>


    <!-- CollectActivity ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/color_craetor_switch</item>

        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/color_craetor_switch_closed</item>

        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色 30%这个颜色 -->
        <!--<item name="android:colorForeground">@color/color_txt_tab</item>-->

        <!--使用方法： 在布局文件中给需要自定义控件中增加app:theme="@style/MySwitch"-->
    </style>

    <!-- SettingActivity ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_setting_activity_drivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="style_setting_activity_item_drivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.66dp</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

    <style name="style_setting_item_name_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textColor">@color/color_txt_setting_item_name</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="style_setting_item_desc_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textColor">@color/color_txt_setting_item_desc</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="style_setting_item_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:textColor">@color/color_txt_setting_item_title</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">15dp</item>
    </style>

    <!-- VideoInfosFragment ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_video_llayout_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ripple_video_item_like</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_video_image_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="style_video_textview_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_video_comment_txt</item>
    </style>

    <!-- VideoPlayActivity ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_video_more_item">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripple_share_item</item>
    </style>

    <style name="style_video_more_item_image">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="style_video_more_item_image2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">9dp</item>
    </style>

    <style name="style_video_more_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_card_name</item>
    </style>

    <!-- LiveBottomSheetDialog ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_live_dialog_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_face_dialog_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_live_dialog_item_img">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>

    <style name="style_live_dialog_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_video_name_txt</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="style_face_dialog_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_video_name_txt</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="style_live_dialog_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.66dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@color/color_follow_bg</item>
    </style>

    <!-- 实现BottomSheetDialog圆角效果 ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <style name="CustomBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <!--必须如此才能配合实现dialog有圆角-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- ShortVideoActivity ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_vertical_video_right_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="style_vertical_video_right_image">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:alpha">0.75</item>
    </style>

    <style name="style_vertical_video_right_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="style_vertical_video_animation">
        <item name="android:windowEnterAnimation">@anim/animate_short_input_in</item>
        <!--设置了没效果-->
        <!--<item name="android:windowExitAnimation">@anim/animate_short_input_out</item>-->
    </style>
    <style name="style_short_comment_animation">
        <item name="android:windowEnterAnimation">@anim/animate_short_comment_in</item>
        <!--设置了没效果-->
        <!--<item name="android:windowExitAnimation">@anim/animate_short_input_out</item>-->
    </style>

</resources>
