<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 导航栏设置背景为透明色     -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--  设置最顶端状态栏为透明，页面第一个控件会顶上去填满状态栏 -->
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->

    </style>

    <!-- common gravity   -->
    <style name="styles_common_gravity">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <!-- home activity RadioButtom style -->
    <style name="styles_homepage_radiobuttom">
        <item name="android:textSize">@dimen/common_sz_10_dimens</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/activity_bottom_paddingTop_dimens</item>
        <item name="android:paddingBottom">@dimen/activity_bottom_paddingBottom_dimens</item>
        <item name="android:drawablePadding">@dimen/activity_bottom_drawablePadding_dimens</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/color_groupbutton_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!--self-tablayout-->
    <style name="SelfTabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="VideoTabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserInfoTabStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HomeTabTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- home activity RadioButtom style -->
    <style name="styles_txt_love_classify">
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_txt_love_pet</item>
    </style>

    <style name="styles_img_love_classify">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--cache toolbar-->
    <style name="styles_cache_toolbar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_cache_bar_title</item>
    </style>

    <!--message toolbar-->
    <style name="styles_toolbar_message">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <declare-styleable name="RadiusCardView">
        <attr name="leftTopRadiu" format="dimension" />
        <attr name="leftBottomRadiu" format="dimension" />
        <attr name="rightTopRadiu" format="dimension" />
        <attr name="rightBottomRadiu" format="dimension" />
        <attr name="bgColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="BannerCardView">
        <attr name="bannerWidth" format="dimension" />
        <attr name="card2Width" format="dimension" />
        <attr name="card3Width" format="dimension" />
    </declare-styleable>

    <!--必须如此才能配合实现dialog有圆角-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- HomeFragment ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_fragment_main_bottom_text">
        <item name="android:textSize">@dimen/common_sz_10_dimens</item>
        <item name="android:paddingBottom">@dimen/activity_bottom_paddingBottom_dimens</item>
        <item name="android:drawablePadding">@dimen/activity_bottom_drawablePadding_dimens</item>
    </style>

    <!-- UserInfoActivity ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="style_user_top_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_user_top_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_video_item_title</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>

    <style name="style_user_top_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/color_txt_user_unattention</item>
    </style>

    <style name="style_user_dialog_relative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
    </style>

    <style name="style_user_dialog_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/grey900</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_user_dialog_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@color/color_home_divider</item>
    </style>

    <style name="style_user_dialog_divider2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/color_bg_user_divider</item>
    </style>

</resources>
