<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MyViewPager2">
        <attr name="loop_time" format="integer" />
        <attr name="auto_loop" format="boolean" />

        <!--  indicator      ?-->
        <attr name="indicator_width" format="dimension"/>
        <attr name="indicator_height" format="dimension" />
        <attr name="indicator_space" format="dimension" />
        <attr name="indicator_radius" format="dimension" />

        <!-- 以下为公用属性 -->
        <attr name="indicator_selected_width" format="dimension" />
        <!--CircleIndicator-->
        <attr name="indicator_normal_width" format="dimension" />

        <attr name="indicator_normal_color" format="reference|color" />
        <attr name="indicator_selected_color" format="reference|color" />
        <attr name="indicator_margin" format="dimension" />
        <attr name="indicator_marginLeft" format="dimension" />
        <attr name="indicator_marginTop" format="dimension" />
        <attr name="indicator_marginRight" format="dimension" />
        <attr name="indicator_marginBottom" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ExtendTextView">
        <!--颜色部分-->
        <attr name="normal_textColor" format="reference|color" />
        <attr name="clickable_textColor" format="reference|color" />

        <!--大小-->
        <attr name="normal_textSize" format="dimension"/>
        <attr name="clickable_textSize" format="dimension" />

        <!--行间距-->
        <attr name="column_padding" format="dimension" />
        <attr name="margin_left" format="dimension" />
        <attr name="margin_right" format="dimension" />
        <attr name="margin_top" format="dimension" />
        <attr name="margin_bottom" format="dimension" />

        <!--内容-->
        <attr name="normal_content" format="string" />
        <attr name="user_from" format="string" />
        <attr name="user_to" format="string" />

    </declare-styleable>

    <declare-styleable name="MaxHeightNestedScrollView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>


    <!--selector-->
    <declare-styleable name="PictureLongScaleImageView">
        <attr name="src" format="reference" />
        <attr name="assetName" format="string" />
        <attr name="panEnabled" format="boolean" />
        <attr name="zoomEnabled" format="boolean" />
        <attr name="quickScaleEnabled" format="boolean" />
        <attr name="tileBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PictureMediumBoldTextView">
        <attr name="stroke_Width" format="float" />
    </declare-styleable>

    <declare-styleable name="PictureRoundCornerRelativeLayout">
        <attr name="psCorners" format="dimension" />
        <attr name="psTopNormal" format="boolean" />
        <attr name="psBottomNormal" format="boolean" />
    </declare-styleable>

    <!--other-->

</resources>